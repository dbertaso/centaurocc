<tr id="row_<%= @motores.id %>_edit">
  <td class="lista-form" colspan="8">

    <%= form_title_edit @motores.modelo_motor %>

    <%= error "row_#{@motores.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @visita, :id_equipo => @motores.id } ) do -%>
    <%= render :partial => 'form' %>
    <%= link_to_remote(image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar')), :title=>I18n.t('Sistema.Body.Vistas.General.cancelar')),
      :method=>:get,
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :cancel_edit, :id => @visita, :id_equipo => @motores.id}) -%>
  </td>
</tr>
</table>
<% end-%>
</td>
</tr>

