<% sector = @sector if sector.nil? %>
<td>
  <%= sector.codigo  %>
</td>	
<td>
  <%= sector.nombre  %>
</td>	
<td>
  <%= sector.descripcion  %>
</td>	
<td style="text-align: center">
  <%= format_bool(sector.activo)  %>
</td>
<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar')),
    :loading =>'image_load()', :loaded => 'image_unload()',
    :url => {:controller => 'sector', :action => :edit, :id => sector.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
    :loading =>'image_load()',:loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'sector', :action => :delete, :id => sector.id}) if vlink 'delete' -%>
</td>

