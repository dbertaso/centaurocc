<tr>
  <th><%=I18n.t('Sistema.Body.Vistas.General.id')%></th>
  <th><%="#{I18n.t('Sistema.Body.Vistas.General.solicitud')} #{I18n.t('Sistema.Body.Vistas.General.numero')}"%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.estado')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.oficina')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.sector')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.rubro')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.partida')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.item')%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.tipo')%></th>
  <th><%="#{I18n.t('Sistema.Body.Vistas.General.unidad')} #{I18n.t('Sistema.Body.Vistas.General.medida')}"%></th>
  <th><%="#{I18n.t('Sistema.Body.Vistas.General.numero')} #{I18n.t('Sistema.Body.Vistas.General.desembolso')}"%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.cantidad')%></th>
  <th><%="#{I18n.t('Sistema.Body.Vistas.General.costo')} #{I18n.t('Sistema.Body.Vistas.General.unitario')}"%></th>
  <th><%="#{I18n.t('Sistema.Body.Vistas.General.monto')} #{I18n.t('Sistema.Body.Vistas.General.financiamiento')}"%></th>
  <th><%=I18n.t('Sistema.Body.Vistas.General.seriales')%></th>
  <th></th>
</tr>

<% @plan_inversion.each do |plan| %>

  <tr>
    <td align="left">
      <%= hidden_field_tag "id_#{plan.id}", plan.id %>
    </td>

    <td align="left">
      <%= plan.solicitud.numero %>
    </td>

    <td align="center">
      <%= plan.estado.nombre %>
    </td>

    <td align="left">
      <%= plan.oficina_nombre %>
    </td>

    <td align="center">
      <%= plan.sector_nombre %>
    </td>

    <td align="left">
      <%= plan.rubro_nombre %>
    </td>

    <td align="left">
      <%= plan.partida_nombre %>
    </td>

    <td align="left">
      <%= plan.item_nombre %>
    </td>

    <td align="left">
      <%= plan.tipo %>
    </td>

    <td align="center">
      <%= plan.unidad_medida.abreviatura %>
    </td>

    <td align="right">
      <%= plan.numero_desembolso %>
    </td>

    <td align="right">
      <%= plan.costo_real_fm %>
    </td>

    <td align="center">
      <%= text_field_tag "cantidad_#{plan.id}", @cantidad, :class=>'text', :style=>'width: 80px', :maxlength=>'10' -%>
    </td>

    <td align="right">
      <%= plan.costo_real_fm %>
    </td>

    <% @monto_financiamiento.to_f = @cantidad * plan.costo_real.to_f %>

    <td align="center">
      <%= text_field_tag "monto_financiamiento_#{plan.id}", @monto_financiamiento, :class=>'text', :style=>'width: 80px', :maxlength=>'10' -%>
    </td>
  </tr>

<% end %>

