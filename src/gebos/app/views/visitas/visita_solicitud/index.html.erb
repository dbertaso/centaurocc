<div id="mensaje" style="display:none; width:420px; height: 150px; left: 300px; top: 130px; position: absolute;" ></div>

<div class="marco-contenido">
  <%= form_title_search %>

  <%= form_remote_tag(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method => :get,
    :url => { :action => :list } ) do -%>
    <table>
      <tr>
        <td style="width: 150px">
          <label><%=I18n.t('Sistema.Body.Vistas.Form.nro_tramite')%></label>
        </td>
        <td>
          <%= text_field_tag 'numero', '', :class=>'text', :maxlength=>'8', :style=>'width: 100px'  %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td style="width: 150px">
          <label><%="#{I18n.t('Sistema.Body.Vistas.Form.nro_tramite') } #{I18n.t('Sistema.Body.Vistas.VisitaSolicitud.Etiquetas.cedula_rif')}"%></label>
        </td>
        <td>
          <select name="tipo" id="tipo" class="select">
            <option value="V "><%=I18n.t('Sistema.Body.Vistas.General.v')%></option>
            <option value="E "><%=I18n.t('Sistema.Body.Vistas.General.e')%></option>
            <option value="J-"><%=I18n.t('Sistema.Body.Vistas.General.j')%></option>
            <option value="G-"><%=I18n.t('Sistema.Body.Vistas.General.g')%></option>
          </select>
          <%= text_field_tag 'identificacion', '', :class=>'text', :maxlength=>'10', :style=>'width: 100px'  %> <%=I18n.t('Sistema.Body.General.ejemplo_documento')%>
        </td>
        <td></td>
      </tr>
      <tr>
        <td style="width: 150px">
          <label><%="#{I18n.t('Sistema.Body.Vistas.General.nombre')} #{I18n.t('Sistema.Body.Vistas.General.del')} #{I18n.t('Sistema.Body.Vistas.General.beneficiario')}"%></label>
        </td>
        <td>
          <%= text_field_tag 'nombre', '', :class=>'text', :maxlength=>'30', :style=>'width: 200px'  %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td style="width: 150px">
          <label><%=I18n.t('Sistema.Body.Vistas.General.municipio')%></label>
        </td>
        <td>
          <%= select(
            'municipio_id','',
            @municipio_list.map{|i| [i.nombre, i.id]},
            { :prompt=>I18n.t('Sistema.Body.Vistas.General.seleccionar') },
            { :class=>'select', :onchange=>'inputChange();' } ) %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td style="width: 150px;" align="right" colspan="3" >
          <%= image_submit_tag(image_path(I18n.t('Sistema.Body.Imagenes.buscar')), :title=>I18n.t('Sistema.Body.Vistas.General.buscar')) -%>
        </td>
      </tr>
    </table>
  <% end %>
  <%= error %>
  <%= message %>
  <br/>
  <div id="list">
  </div>
</div>
