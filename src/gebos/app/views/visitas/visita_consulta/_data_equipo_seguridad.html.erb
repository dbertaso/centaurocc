<% equipo_seguridad = @equipo_seguridad if equipo_seguridad.nil? %>
<td colspan="2" align="right">
  <table width="96%">
<tr>
    <td class="separador" valign="bottom" colspan="2">
            <%  tipo_equipo_seguridad = TipoEquipoSeguridad.find(equipo_seguridad.tipo_equipo_id) %>
      <span>Tipo de Equipo de Seguridad y Navegación:  <label style="color: red"><%= tipo_equipo_seguridad.tipo %></label></span>
    </td>
</tr>
 
    <tr>
          <td style="width: 300px">
             <label>Es propio:</label>
          </td>
          <td style="width: 650px">
             <%=format_bool equipo_seguridad.es_propio unless equipo_seguridad.es_propio.nil? %>
          </td>
  </tr>

  <tr>
        <td>
              <label>Cantidad:</label>
        </td>
        <td>
            <%=  equipo_seguridad.cantidad unless equipo_seguridad.cantidad.nil? %>
        </td>
  </tr>

 <tr>
        <td>
             <label>¿Dispone de GPS?</label>
          </td>
        <td>
           <%=format_bool equipo_seguridad.con_gps unless equipo_seguridad.con_gps.nil? %>
        </td>
	</tr> 

<tr>
        <td>
                <label>Año:</label>
        </td>
        <td>
            <%=  equipo_seguridad.ano unless equipo_seguridad.ano.nil? %>
        </td>
</tr>
<tr>
        <td>
                <label>Marca / Modelo:</label>
        </td>
        <td>
           <%=  equipo_seguridad.modelo unless equipo_seguridad.modelo.nil? %>
        </td>
</tr>

<tr>
        <td>
                <label>Serial:</label>
        </td>
        <td>
               <%=  equipo_seguridad.numero_serial unless equipo_seguridad.numero_serial.nil? %>
        </td>
</tr>


  <tr>
      <td colspan="2">
        <label style="color: red">Nuevas Especificaciones:</label>
      </td>
  </tr>
  <tr>
      <td>
              <label>Condiciones</label>
      </td>
      <td>
           <%=  equipo_seguridad.condicion unless equipo_seguridad.condicion.nil? %>
      </td>
  </tr>
<tr>
      <td>
              <label>Descripción</label>
      </td>
      <td>
          <%=  equipo_seguridad.descripcion unless equipo_seguridad.descripcion.nil? %>

      </td>
</tr>



</table>
</td>


 






