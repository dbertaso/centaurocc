<script type="text/javascript">Event.observe(window, 'load', function() {$("message").hide();});</script>
<div id="tabs">

  <ul>
    <%
    action_name = controller.action_name
    controller_name = controller.controller_name
    if controller_name=='visita_seguimiento_cultivo'
    %>
      <li id="actual"><div><a href="#"><%=I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.seguimiento_cultivo_campo') %></a></div></li>
    <%
    else
    %>
      <li><div>
          <%= link_to(I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.seguimiento_cultivo_campo'), :controller => '/visitas/visita_seguimiento_cultivo', :action => 'edit', :id => @visitas.id,:siniestro_checked=>params[:siniestro_checked], :popup=>params[:popup]) if (action_name == 'index' ||action_name == 'edit')  %>
        </div></li>
    <%
    end
    if !@seguimiento_cultivo.nil? && @seguimiento_cultivo.id
      if controller_name=='visita_descripciones_especificas'
      %>
        <li id="actual"><div><a href="#"><%= I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.descripciones_especificas') %></a></div></li>
      <%
      else
      %>
        <li><div>
            <%= link_to(I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.descripciones_especificas'), :controller => '/visitas/visita_descripciones_especificas', :action => 'edit', :id => @visitas.id,:siniestro_checked=>params[:siniestro_checked],  :popup=>params[:popup]) if (action_name == 'index' || action_name == 'edit') %>
          </div></li>
      <%
      end
    end
  %>

    <% if controller_name=='visita_decision'    %>
      <li id="actual"><div><a href="#"><%=I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.recomendacion')%></a></div></li>
    <%
    else
    %>
      <li><div>
          <%= link_to(I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.recomendacion'), :controller => '/visitas/visita_decision', :action => 'edit', :id => @visitas.id,:siniestro_checked=>params[:siniestro_checked], :popup=>params[:popup]) if (action_name == 'index' || action_name == 'edit') %>
        </div></li>
    <% end%>

    <%
    if @visitas.decision_visita
      unless !@visitas.decision_visita.recomienda_generar_desembolso
        if controller_name=='recomendacion_plan_inversion'
        %>
          <li id="actual"><div><a href="#"><%=I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.recomendacion_desembolso')%></a></div></li>
        <%

        else
        %>
          <li><div>
              <%= link_to(I18n.t('Sistema.Body.Vistas.VisitaSeguimientoCultivo.Etiquetas.recomendacion_desembolso'), :controller => '/visitas/recomendacion_plan_inversion', :action => 'index', :id => @visitas.id,:siniestro_checked=>params[:siniestro_checked], :popup=>params[:popup]) if (action_name == 'index' || action_name == 'edit') %>
            </div></li>
        <%
        end
      end
    end
  %>
  </ul>
</div>
