    <% 
    else 
    %>
      <li><div>
          <%= link_to(I18n.t('Sistema.Body.Vistas.VisitaPastizalesPotreros.Etiquetas.evalucacion_pastizales_potreros'), :controller => '/visitas/visita_pastizales_potreros', :action => 'index', :id => @visitas.id,:siniestro_checked=>params[:siniestro_checked], :popup=>params[:popup]) if (action_name == 'index' ||action_name == 'edit')  %>
        </div></li>
    <% 
