<div class="marco-contenido">
  <%= form_title_edit @empresa.alias %>

  <%= render :partial=>'clientes/cliente_empresa/common/tabs' %>
  <div class="marco-contenido2">

    <%= error %>
    <%= message %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id=>@empresa.id, :popup=>params[:popup] } ) do -%>		

      <%= render :partial => 'form' %>
      <div id="buttons_edit" style="display: none">
        <%= form_buttons_edit :popup=>params[:popup] %>
      </div>

      <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
        { :action => :index, :popup=>params[:popup] },
        { :id=>'button_close' } ) -%>

    <% end -%>
  </div>
</div>
