    </td>
    <td style="width: 80%">
      <%= radio_button 'empresa_email', 'tipo', 'P',
        :class=>'text'  -%><%= I18n.t('Sistema.Body.Vistas.General.principal') %><br />
      <%= radio_button 'empresa_email', 'tipo', 'A',
        :class=>'text'  -%><%= I18n.t('Sistema.Body.Vistas.General.administrativo') %><br />
