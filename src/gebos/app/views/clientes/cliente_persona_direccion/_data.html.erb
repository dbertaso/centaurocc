<% persona_direccion = @persona_direccion if persona_direccion.nil? %>
<td>
  <%= persona_direccion.tipo_nombre  %>
</td>
<td>
  <%= format_bool persona_direccion.correspondencia  %>
</td>
<td>
  <%= persona_direccion.avenida %>
</td>
<td>
  <%= persona_direccion.edificio %>
</td>
<td>
  <%= persona_direccion.ciudad.nombre %>
</td>
<td style="text-align: center">
  <%= format_bool persona_direccion.activo %>
</td>
<td style="text-align: right">
  <%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title =>'Editar'),
    :action => 'edit', :persona_id => @persona.id, :id => persona_direccion.id, :popup=>params[:popup]) %>&nbsp;
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'),:title =>'Eliminar'),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:action => :delete,  :persona_id => @persona.id, :id => persona_direccion.id}) -%>
</td>