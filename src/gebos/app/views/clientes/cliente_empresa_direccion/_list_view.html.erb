<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 100px" <%= sort_class_helper('empresa_direccion.tipo') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.tipo'), 'empresa_direccion.tipo', 'list' %>
      </th>
      <th style="width: 50px" <%= sort_class_helper('empresa_direccion.correspondencia') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.correspondencia'), 'empresa_direccion.correspondencia', 'list' %>
      </th>
      <th style="width: 140px" <%= sort_class_helper('empresa_direccion.avenida') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.avenida_calle_callejon'), 'empresa_direccion.avenida', 'list' %>
      </th>
      <th style="width: 140px" <%= sort_class_helper('empresa_direccion.edificio') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.casa_edificio_otro'), 'empresa_direccion.edificio', 'list' %>
      </th>
      <th style="width: 140px" <%= sort_class_helper('ciudad.nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.ciudad'), 'ciudad.nombre', 'list' %>
      </th>
      <th style="width: 50px" <%= sort_class_helper('empresa_direccion.activo') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.activo'), 'empresa_direccion.activo', 'list' %>
      </th>
      <th style="width: 70px">
      </th>
    </tr>
  </thead>
  <tbody id="list_body">
    <%  
    even_odd = 1
    for empresa_direccion in @list
      even_odd = 1 - even_odd %>

      <% empresa_direccion = @empresa_direccion if empresa_direccion.nil? %>
      <tr class="lista<%= even_odd %>" id="row_<%= empresa_direccion.id %>">
        <td>
          <%= empresa_direccion.tipo_nombre  %>
        </td>
        <td>
          <%= format_bool empresa_direccion.correspondencia  %>
        </td>
        <td>
          <%= empresa_direccion.avenida %>
        </td>
        <td>
          <%= empresa_direccion.edificio %>
        </td>
        <td>
          <%= empresa_direccion.ciudad.nombre %>
        </td>
        <td>
          <%= format_bool empresa_direccion.activo %>
        </td>
        <td style="text-align: right">
          <%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.consultar')), 
            :action => 'view_detail', :popup=>params[:popup], :empresa_id => @empresa.id, :id => empresa_direccion.id) %>&nbsp;
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>