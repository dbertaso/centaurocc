      <% else %>
        <th style="width: 340px" <%= sort_class_helper('nombre') %>>
          <%= sort_link_helper 'Nombre del Puerto Base', 'nombre', 'list' %>
        </th>
      <% end %>
      <th style="width: 140px">
        Estado
      </th>
      <th style="width: 140px">
        Municipio
      </th>
      <th style="width: 70px">
        Acciones
      </th>
    </tr>
  </thead>
	<tbody id="list-body">
<%
	even_odd = 1
	for unidad_produccion in @list
		even_odd = 1 - even_odd %>
	<%= render :partial => 'row_view', :locals => { :unidad_produccion => unidad_produccion, :even_odd => even_odd } -%>
<% end %>
</tbody>
</table>

<%= form_pagination %>

          </div>

	<%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
		{ :controller => 'cliente_persona', :action => :index, :popup=>params[:popup] },
		{ :id=>'button_close' } ) -%>

</div>
</div>