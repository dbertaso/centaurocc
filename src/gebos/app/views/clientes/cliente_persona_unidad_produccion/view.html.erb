	<%= error %>
	<%= message %>

	<div id="list">
<table class="lista" style="width: 100%">
	<thead>
    <tr>
        <th style="width: 100px" <%= sort_class_helper('codigo') %>>
          <%= sort_link_helper 'Código', 'codigo', 'list' %>
        </th>
      <% if @persona.cliente_persona.es_pescador == false %>
        <th style="width: 240px" <%= sort_class_helper('nombre') %>>
          <%= sort_link_helper 'Nombre', 'nombre', 'list' %>
        </th>
        <th style="width: 220px" <%= sort_class_helper('total_hectareas') %>>
          <%= sort_link_helper 'Total Hectáreas', 'total_hectareas', 'list' %>
