<% persona_email = @persona_email if persona_email.nil? %>
<td>
  <%= persona_email.tipo_nombre  %>
</td>
<td>
  <%= persona_email.email %>
</td>
<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'),:title =>'Editar'),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method =>:get,
    :url => {:action => :edit, :persona_id => @persona.id, :id => persona_email.id}) -%>
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'),:title =>'Eliminar'),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:action => :delete, :persona_id => @persona.id, :id => persona_email.id}) -%>
</td>