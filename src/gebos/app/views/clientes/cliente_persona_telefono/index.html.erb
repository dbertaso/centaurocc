      <%= I18n.t('Sistema.Body.Vistas.General.modificando') %> <%= "#{I18n.t('Sistema.Body.General.beneficiario')} #{I18n.t('Sistema.Body.General.natural')}" %> <span class="titulo_modificar">'<%= @persona.nombre_corto %>'</span>
    </div></div></div>

<%= render :partial=>'clientes/cliente_persona/common/tabs' %>
<div class="marco-contenido2">

  <script type="text/javascript">
    function codigo(value){
      if (value == 'C'){
        //document.getElementById("persona_telefono_codigo").disabled = 'disabled';
        document.getElementById("codigo_Nac").style.display="none";
        document.getElementById("codigo_cel").style.display="";
        //document.getElementById("persona_telefono_codigo").disabled = 'disabled';
      }else{
        document.getElementById("codigo_cel").style.display="none";
        document.getElementById("codigo_Nac").style.display="";
        document.getElementById("persona_telefono_codigo").value="";
      }
    }

  </script>

  <div class="marco-boton-in" id="button_new">
    <%= link_to_remote( 
