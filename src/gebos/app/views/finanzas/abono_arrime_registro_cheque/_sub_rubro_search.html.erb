<% sub_rubro_onchange = remote_function(
  :loading =>'image_load()',
  :loaded => 'image_unload()',
  :method=>:get,
  :url=>{:controller=>'abono_arrime_registro_cheque',:action=>:sub_rubro_search },
  :with=>"'id='+value") %>

<%= select(
      'sub_rubro_id', '',
      @sub_rubro_select.map{|i| [i.nombre, i.id]},
      { :prompt=> I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:onchange=>sub_rubro_onchange + ';inputChange();' } ) %>
