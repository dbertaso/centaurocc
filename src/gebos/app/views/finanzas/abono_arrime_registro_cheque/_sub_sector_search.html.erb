<% sub_sector_onchange = remote_function(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method=>:get,
    :url=>{:controller=>'abono_arrime_registro_cheque',:action=>:sub_sector_search },
    :with=>"'id='+value") %>


<%= select(
      'sub_sector_id', '',
      @sub_sector_select.map{|i| [i.nombre, i.id]},
      { :prompt=> I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:onchange=>sub_sector_onchange + ';inputChange();' } ) %>
