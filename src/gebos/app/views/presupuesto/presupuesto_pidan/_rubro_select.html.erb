   <% rubro_onchange = remote_function(
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :method=>:get,
            :url=>{:controller=>'presupuesto_pidan',
            :action=>:rubro_change },
            :with=>"'rubro_id='+value+'&estado_id='+presupuesto_carga_estado_id.value" ) %>

              <%= select(
                'presupuesto_carga', 'rubro_id',
                @rubro_list.map{|i| [i.nombre, i.id]},
                {:prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
                { :class=>'select', :style=>'width:250px', :onchange=>rubro_onchange + ';inputChange();' } ) %>
