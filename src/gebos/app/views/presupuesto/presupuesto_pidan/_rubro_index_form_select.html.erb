  <% sub_rubro_onchange = remote_function(
           :loading =>'image_load()',
           :loaded => 'image_unload()',
           :method=>:get,
           :url=>{:controller=>'presupuesto_pidan',
           :action=>:sub_rubro_index_form_change },
           :with=>"'rubro_id='+value") %>


<%= select(
      'rubro_id', '',
      @rubro_list.map{|i| [i.nombre, i.id]},
      { :prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:style=>'width:250px', :onchange=>sub_rubro_onchange +';inputChange();' } ) %>
