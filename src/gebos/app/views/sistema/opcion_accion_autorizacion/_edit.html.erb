<tr id="row_<%= @opcion_accion.id %>_edit">
  <td class="lista-form" colspan="4">

    <%= form_title_edit @opcion_accion.autorizacion_nombre %>

    <%= error "row_#{@opcion_accion.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @opcion_accion.id } ) do %>
    <%= render :partial => 'form' %>
    <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar'), :title=>I18n.t('Sistema.Body.Vistas.General.cancelar')),
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :method=>:get,
      :url => { :action => :cancel_edit, :id => @opcion_accion.id}) -%>
  </td>
</tr>
</table>
<% end %>
</td>
</tr>