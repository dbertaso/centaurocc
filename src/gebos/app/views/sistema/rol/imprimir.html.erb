<div style="background-color: white; width: 100%">
<img src="/images/logo_bandes.jpg" width="164" height="65" align="left" />
<br/><br/>
<div style="width: 83%; text-align: center; font-family: arial; font-size: 16px"><label><%= I18n.t('Sistema.Body.Vistas.Rol.Etiquetas.detalle_rol') %></label></div>
<div style="text-align: right; font-family: arial; font-size: 12px"><%= I18n.t('Sistema.Body.Vistas.Usuario.Imprimir.fecha_impresion') %><%= Time.now.strftime('%d/%m/%Y') %></div>
<h1></h1>
<div align="right" style="font-family: arial; font-size: 12px"><%= I18n.t('Sistema.Body.Vistas.Usuario.Imprimir.seguridad_informacion') %></div>

<br/>
<table border="1" style="width: 100%">
  <tr>
    <th style="width: 40%">
      <label style="font-family: arial; font-size: 16px"><%= I18n.t('Sistema.Body.Vistas.Usuario.Imprimir.nombre_rol') %></label>
    </th>
    <th style="width: 50%">
      <label style="font-family: arial; font-size: 16px"><%= I18n.t('Sistema.Body.Vistas.Usuario.Imprimir.opciones') %></label>
    </th>
    <th style="width: 10%">
      <label style="font-family: arial; font-size: 16px"><%= I18n.t('Sistema.Body.Vistas.Usuario.Imprimir.acciones') %></label>
    </th>
  </tr>

  <% @rol.each { |rol|  %>
    <tr>
      <td valign="top" style="font-family: arial; font-size: 16px">
        <%= rol.id.to_s + ' - ' + rol.nombre %>
      </td>

      <td colspan="2" style="font-family: arial; font-size: 16px">
        <table border="1" style="width: 100%">
        <% rol.opciones.each { |opcion| %>
          <tr>
            <td valign="top" style="width: 82%">
                <%= opcion.nombre %><br/>
                <%= opcion.ruta %><br/>
            </td>
            <td style="width: 18%">
              <% h = 0
                  opcion.acciones.each { |accion|
                  h = 1 %>
                <%= accion.accion.nombre %><br/>
              <% }
                unless h == 1 %>
              <% end %>
            </td>
          </tr>
          <% } %>
        </table>
      </td>
    </tr>

  <% } %>
</table>
</div>