<td>
  <%= usuario.nombre_usuario %>
</td>
<td>
  <%= usuario.primer_nombre %>
</td>
<td>
  <%= usuario.primer_apellido %>
</td>
<td>
  <%= usuario.oficina.nombre %>
</td>
<td style="text-align: center">
  <%= format_bool usuario.activo  %>
</td>
<td style="text-align: right">
  <%= link_to image_tag(I18n.t('Sistema.Body.Imagenes.consultar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.consultar')), :action => 'view', :method => :get, :id => usuario.id %>&nbsp;
  <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')), :action => 'edit', :method => :get, :id => usuario.id ) if vlink 'edit' %>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm =>I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:action => :delete, :id => usuario.id}) if vlink 'delete' -%>
  <%= link_to image_tag(I18n.t('Sistema.Body.Imagenes.imprimir'), :title=>I18n.t('Sistema.Body.Controladores.Accion.imprimir')), { :action=>'imprimir', :method =>:get, :id=>usuario.id, :popup=>true },
    :popup => ['unidad_apoyo_resguardo', 'height=600,width=800, scrollbars=yes, resizable=yes'] %>
</td>