<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 70px" <%= sort_class_helper('nro_tramite') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.nro_tramite'), 'nro_tramite', 'list' %>
      </th>
      <th style="width: 50px" <%= sort_class_helper('cedula_rif') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.VisitaSolicitud.Etiquetas.cedula_rif'), 'cedula_rif', 'list' %>
      </th>
      <th style="width: 150px" <%= sort_class_helper('productor') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.General.beneficiario'), 'productor', 'list' %>
      </th>
      <th style="width: 90px" <%= sort_class_helper('estatus') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.estatus'), 'estatus', 'list' %>
      </th>
      <th style="width: 70px" <%= sort_class_helper('estado') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.estado'), 'estado', 'list' %>
      </th>
      <th style="width: 70px" <%= sort_class_helper('municipio') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.municipio'), 'municipio', 'list' %>
      </th>
      <th style="width: 70px" <%= sort_class_helper('parroquia') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.parroquia'), 'parroquia', 'list' %>
      </th>
      <th style="width: 150px" <%= sort_class_helper('unidad_produccion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Modelos.Solicitud.Columnas.unidad_produccion'), 'unidad_produccion', 'list' %>
      </th>
      <th style="width: 5px"><%= I18n.t('Sistema.Body.Vistas.General.acciones') %>
      </th>
    </tr>
  </thead>
  <tbody id="list-body">
    <%  
    even_odd = 1
    for envio_maquinaria in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :envio_maquinaria => envio_maquinaria, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>
