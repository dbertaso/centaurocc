        if controller_name=='solicitud_prestamo_rubro'
        
        %>
          <li id="actual">
            <div>
              <a href="#">
                <%= I18n.t('Sistema.Body.Vistas.ConsultaPrestamo.Etiquetas.plan_inversion') %>
              </a>
            </div>
          </li>
        <% 
        else
        %>
          <li>
            <div>
              <%= link_to(I18n.t('Sistema.Body.Vistas.ConsultaPrestamo.Etiquetas.plan_inversion'), :controller => 'solicitud_prestamo_rubro', :action => 'index', :solicitud_id => @solicitud.id, :prestamo_id => @prestamo.id) if (action_name == 'index' || action_name == 'edit' || action_name == 'new') %>
              <%= link_to(I18n.t('Sistema.Body.Vistas.ConsultaPrestamo.Etiquetas.plan_inversion'), :controller => 'solicitud_prestamo_rubro', :action => 'view', :solicitud_id => @solicitud.id, :prestamo_id => @prestamo.id) if (action_name == 'view' || action_name == 'view_detail')  %>    
            </div>
          </li>
        <% 
        end
    
      end
    %>
  </ul>
</div>
