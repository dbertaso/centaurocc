<div id="tabs">
  <ul>
    <%
      action_name = controller.action_name
      controller_name = controller.controller_name
      if controller_name=='solicitud_prestamo' 
      %>
        <li id="actual">
          <div>
            <a href="#">
              <%= I18n.t('Sistema.Body.Controladores.ConsultaPrestamo.FormTitles.form_title_record') %>
            </a>
          </div>
        </li>
      <% 
      else 
      %>
        <li>
          <div>
            <%= link_to(<%= I18n.t('Sistema.Body.Controladores.ConsultaPrestamo.FormTitles.form_title_record') %>, :controller => 'solicitud_prestamo', :action => 'edit', :solicitud_id => @solicitud.id, :id => @prestamo.id) if action_name == 'index' || action_name=='edit'  %>
            <%= link_to(<%= I18n.t('Sistema.Body.Controladores.ConsultaPrestamo.FormTitles.form_title_record') %>, :controller => 'solicitud_prestamo', :action => 'view_detail', :solicitud_id => @solicitud.id, :id => @prestamo.id) if (action_name=='view_detail' || action_name=='view')  %> 
