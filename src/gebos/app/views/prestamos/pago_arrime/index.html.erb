

<div class="marco-contenido">
  <%= form_title_search %>

  <%= form_remote_tag(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method => :get,
    :url => { :action => :list } ) do -%>
    <table>

      <tr>
        <td style="width: 180px">
          <label>
            <%= I18n.t('Sistema.Body.Vistas.Form.numero_tramite') %>
          </label>
        </td>
        <td>
          <%= text_field_tag 'solicitud_numero', '', :class=>'text', :maxlength=>'8', :style=>'width: 120px'  %>
        </td>
      </tr>
      <tr>
        <td style="width: 180px">
          <label>
            <%= "#{I18n.t('Sistema.Body.Vistas.General.numero')} #{I18n.t('Sistema.Body.Vistas.General.prestamo')}" %>
          </label>
        </td>
        <td>
          <%= text_field_tag 'prestamo_numero', '', :class=>'text', :maxlength=>'10', :style=>'width: 120px'  %>
        </td>
      </tr>
      <tr>
        <td style="width: 180px">
          <label>
            <%="#{I18n.t('Sistema.Body.Vistas.General.numero')} #{I18n.t('Sistema.Body.Vistas.General.cedula')} / #{I18n.t('Sistema.Body.Vistas.General.rif')}" %>
          </label>
        </td>
        <td>

        <select name="tipo" id="tipo" class="select">
            <option value="V-"><%= I18n.t('Sistema.Body.General.TipoDocumento.venezolano') %></option>
            <option value="E-"><%= I18n.t('Sistema.Body.General.TipoDocumento.extranjero')%></option>
            <option value="J-"><%= I18n.t('Sistema.Body.General.TipoDocumento.juridico')%></option>
            <option value="G-"><%= I18n.t('Sistema.Body.General.TipoDocumento.gobierno')%></option>
          </select>

          <%= text_field_tag 'identificacion', '', :class=>'text', :maxlength=>'10', :style=>'width: 120px'  %><%= I18n.t('Sistema.Body.General.ejemplo_documento')%>
        </td>
      </tr>

      <tr>
        <td style="width: 180px">
          <label>
            <%= I18n.t('Sistema.Body.General.apellido_empresa')%>
          <label>
        </td>
        <td>
          <%= text_field_tag 'nombre_beneficiario', '', :class=>'text', :maxlength=>'150', :style=>'width: 400px'  %>
        </td>
      </tr>

    <tr>
      <td>
        <label>
          <%= I18n.t('Sistema.Body.Controladores.IndicadorCartera.Agrupadores.rubro') %>
        </label>
      </td>
      <td>
        <span id="rubro-select">
          <%= render 'rubro_select' %>
        </span>
      </td>
    </tr> 

    <tr>
      <td>
        <label>
          <%= I18n.t('Sistema.Body.Controladores.IndicadorCartera.Agrupadores.sub_rubro') %>
        </label>
        </td>
      <td>
        <span id="sub-rubro-select">
          <%= render 'sub_rubro_select' %>
        </span>
      </td>
    </tr> 

    <tr>
      <td>
        <label>
         <%= I18n.t('Sistema.Body.Controladores.IndicadorCartera.Agrupadores.actividad') %>
        </label>
      </td>
      <td>
        <span id="actividad-select">
          <%= render 'actividad_select' %>
        </span>
      </td>
    </tr>

      <tr>
        <td style="width: 170px">
          <label><%= I18n.t('Sistema.Body.Vistas.Form.silo') %></label>
        </td>
        <td>
          <%= select(
            'silo_id', '',
           options_from_collection_for_select(@silo_list, 'id', 'nombre'),
                {:prompt=>I18n.t('Sistema.Body.Vistas.General.seleccione')},
                { :class=>'select',  :onchange=>'inputChange'}) %> 
        </td>
        <td><%= image_submit_tag(image_path(I18n.t('Sistema.Body.Imagenes.buscar'))) -%></td>
      </tr>
    </table>

  <% end %>

  <center>
    <div id="mensaje" style="display: none"><%= @mensaje %></div>
    <div id="errores" style="display: none"><%= @feedback %></div>
    <%= message %>
  </center>


  <br/>
  <div id="list" style="width: 99%"></div>

