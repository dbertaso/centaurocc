        toS = document.getElementById("otro_arrime_valor_total_salida_f").value;
        neto = (parseFloat(toE) - parseFloat(toS));
        neto = neto.toFixed(2);
        neto = neto*100;
        neto = Math.floor(neto);
        neto = neto/100;
