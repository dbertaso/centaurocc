    </td>
    <td>
      <%unless @otro_arrime.nil?%>
        <%valor = sprintf('%01.2f',  @otro_arrime.peso_remolque).sub('.', ',')%>
        <%=valor.to_s.gsub(/(\d)(?=(\d\d\d)+(?!\d))/, "\\1.")%>
