</table>
</br>
<br/>
<table align="center" border="1" width="30%">
  <tr align="center" >
    <td><label>Resultado:</label></td>
    <td>
      <%unless @otro_arrime.nil?%>
        <% if  @otro_arrime.resultado == 'A' %>
          Aprobado
        <% elsif @otro_arrime.resultado == 'R' %>
          Rechazado
        <%end%>
      <%end%>
    </td>
  </tr>
  <% if @otro_arrime.resultado =='A' %>
    <tr align="center" >
      <td><label>Valor del Arrime:</label></td>
      <td>
        <%unless @otro_arrime.nil?%>
          <%valor = sprintf('%01.2f',@otro_arrime.monto_arrime).sub('.', ',')%>
          <%=valor.to_s.gsub(/(\d)(?=(\d\d\d)+(?!\d))/, "\\1.")%>
        <%end%>
      </td>
    </tr>
    <tr align="center" >
      <td><label>Observaci&oacute;n:</label></td>
      <td align="center">
        <%= @otro_arrime.observacion.to_s unless @otro_arrime.nil? -%>
      </td>
    <%end%>
    <% if @otro_arrime.resultado =='R' %>
    <tr align="center" >
      <td><label>Nro. Acta:</label></td>
      <td> <%= @otro_arrime.nro_acta_rechazo unless @otro_arrime.nil? -%> </td>
    </tr>
  </tr>
  <tr align="center" >
    <td><label>Causa:</label></td>
