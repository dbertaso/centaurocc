        <%valor = sprintf('%01.2f',  @otro_arrime.valor_total_entrada).sub('.', ',')%>
        <%=valor.to_s.gsub(/(\d)(?=(\d\d\d)+(?!\d))/, "\\1.")%>
      <%end%>
