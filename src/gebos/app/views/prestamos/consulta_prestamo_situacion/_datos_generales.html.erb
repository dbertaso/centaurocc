                  <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_despachado')%>:
                </label>
              </td>
              <td style="text-align: right">
                <%= @prestamo.monto_despachado_fm %>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>
                <label>
                  <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_por despachar')%>:
                </label>
              </td>
              <td style="text-align: right">
                <b><%= format_fm(@prestamo.monto_por_despachar_fm) %></b>
              </td>
              <td>
              </td>
            </tr>
            <tr>
              <td>
                <label>
                  <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_facturado')%>:
                </label>
              </td>
              <td style="text-align: right">
                <b><%= @prestamo.monto_facturado_fm %></b>
              </td>
              <td>
             </td>
            </tr>
          <%end%>
          <tr>
            <td>
              <label>
                <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_liquidado')%>:
              </label>
            </td>
            <td style="text-align: right">
              <%= @prestamo.monto_liquidado_fm %>
            </td>
            <td>
            </td>
            <td>
            </td>
          </tr>

          <tr>
            <td>
              <label>
                <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_liquidar')%>:
              </label>
            </td>
            <td style="text-align: right">
              <b><%= @prestamo.monto_por_liquidar_fm %></b>
            </td>
            <td>
           </td>
          </tr>      
        </table>
      </div>
    </div>
