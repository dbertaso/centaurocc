              <%= t('Sistema.Body.Vistas.ConsultaPrestamoSituacion.Etiquetas.monto_gastos')%>:
            </label>
            </td>
            <td style="text-align: right">
              <%= @prestamo.monto_gasto_total_fm %>
            </td>
         </tr>
         
          <tr>
            <td>
