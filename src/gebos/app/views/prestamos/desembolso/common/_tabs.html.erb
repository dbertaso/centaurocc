<%
  else
%>
    <li><div>
        <%= link_to("#{I18n.t('Sistema.Body.Vistas.General.archivos')} #{I18n.t('Sistema.Body.Vistas.General.procesados')}", :controller=>'desembolso', :accion=>1 , :action => 'preparar_trasnferencia') if (action_name == 'index' ) %>
    </div></li>
<%
  end
%>
