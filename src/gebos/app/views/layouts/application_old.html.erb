					<div style="float:right;"><%= image_tag(image_path('tope/bicentenario.png')) %></div>
				</div>
				<div id="" style="background-color:#9A0000; height: 2px; "></div>
				<div id="logo" style="background-color:#68971D; height: 116px; ">
