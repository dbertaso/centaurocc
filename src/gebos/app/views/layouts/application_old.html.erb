			  		cmDraw ('myMenuID', myMenu, 'hbr', cmFoncrei, 'Foncrei');
		  		</script>
			<% end %>
		  <% end %>
	
	<% if @form_title %>
	  <h1><%= form_title %></h1>
	<% else %>
		<br><br>
	<% end %>
	
	<%= @content_for_layout %>
	
	<% if session[:id] %>

      <%  @usuario_aux = Usuario.find(session[:id])
