          @oficina_aux = @oficina.nombre.to_s %>
	<% end %>
	
		<br>  
     	<div id="foot" style="background: transparent url(/assets/tope/menu_fondo_estilo.gif) repeat-x; height: 24px; width:100%">

	      <div style="background: transparent url(/assets/tope/menu_fondo_estilo.gif); text-align: left; width:100%;border=1">
	        <div style="float:left;">
				<%= image_tag(image_path('tope/fondas_blanco.png')) %>
			</div>
			<div style="float:left;">
				<div style="color:white; font-size: 9px; text-align: center">
				Version 5.0<br>2012
				</div>
			</div>
			<div style="float:right;"><%= image_tag(image_path('tope/logo_gebos.png')) %></div>
