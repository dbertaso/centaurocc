<% rubro_onchange = remote_function(
    :method=>:get, :loading =>'image_load()', :loaded => 'image_unload()',
    :url=>{:controller=>'reestructuracion',
      :action=>:rubro_change },
    :with=>"'rubro_id='+value") %>

<%= select(
      'rubro_id', '',
      @rubro_list.map{|i| [i.nombre, i.id]},
      { :prompt=>I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:style=>'width:500px',:onchange=>rubro_onchange + ';inputChange();' } ) %>