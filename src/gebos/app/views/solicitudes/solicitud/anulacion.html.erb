<div class="marco-titulo"><div><div>
  <%=I18n.t('Sistema.Body.Vistas.CausalesAnulacionRevocatoria.Mensajes.anulacion_nro')%> <span style="color:red;font-weight:bold"><%=@solicitud.numero%></span> <%=I18n.t('Sistema.Body.General.beneficiario')%>: <span style="color:red;font-weight:bold"><%=ViewListSolicitud.find_by_solicitud_id(@solicitud.id).nombre%></span>
</div></div></div>
<div align="center" style="width:100%"><div id="errorExplanation" align="center" class="errorExplanation" style="display: none; text-align: left"></div></div>

<%= form_remote_tag(
		:loading =>'image_load()',
    :loaded => 'image_unload()',
		:url => { :action => :save_anulacion },
	    :html => {:id => 'principal_form' } ) do -%>
        <%= hidden_field 'solicitud', 'id' -%>
<table align="center" class="lista" style="width: 70%">
  
  
  <tr>
    <th align="center" style="width: 100%;padding-top:8px;padding-bottom:8px;padding-right:20px;padding-left:20px">
      <%=I18n.t('Sistema.Body.Vistas.CausalesAnulacionRevocatoria.Mensajes.causas_motivo_para_anulacion')%>
    </th>    
  </tr>

  <tr class="lista0">
    <td align="center" style="width: 100%;padding-top:8px;padding-bottom:8px;padding-right:20px;padding-left:20px">
      <%= select(
          'solicitud', 'causa_revocatoria_anulacion',
          @causal_select.map{|i| [i.causa, i.id]},
          { :prompt=>I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
          { :class=>'select',:onchange=>'inputChange();' } ) %>           
    </td>    
  </tr>  
  
  <tr>
    <th align="center" style="width: 100%;padding-top:8px;padding-bottom:8px;padding-right:20px;padding-left:20px">
      <%=I18n.t('Sistema.Body.Vistas.CausalesAnulacionRevocatoria.Mensajes.justificacion_anulacion')%>
    </th>    
  </tr>

  <tr class="lista0">
    <td align="center" style="width: 100%;padding-top:8px;padding-bottom:8px;padding-right:20px;padding-left:20px">
      <%= text_area 'solicitud', 'justificacion_revocatoria_anulacion', :style=>'width: 400px; height: 60px'%>
    </td>    
  </tr>  
  
</table>
<br>
<div align="center">
<%= image_submit_tag(I18n.t('Sistema.Body.Imagenes.aplicar'),:onclick=>"if (!confirm('#{I18n.t('Sistema.Body.Vistas.CausalesAnulacionRevocatoria.Mensajes.esta_seguro_anular_tramite')}')) {return false;}")  -%>&nbsp;

<%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
               {  },
               { :id=>'buton_cerrar',:onclick=>"window.close();return false;" } ) -%>
</div>
<% end %>

