<div id="errorExplanation" class="errorExplanation" style="display: none;text-align: left">
</div>
<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 8%" <%= sort_class_helper('numero') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.nro_tramite'), 'numero', 'list' %>
      </th>

      <th style="width: 7%" <%= sort_class_helper('cedula_rif') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.Vistas.General.nro')} #{I18n.t('Sistema.Body.Vistas.General.cedula')} / #{I18n.t('Sistema.Body.Vistas.General.rif')}", 'cedula_rif', 'list' %>
      </th>
      <th style="width: 18%" <%= sort_class_helper('beneficiario') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.General.beneficiario'), 'beneficiario', 'list' %>
      </th>
      <th style="width: 14%">
	<%= I18n.t('Sistema.Body.Vistas.Form.estatus') %>
      </th>
      <th style="width: 10%" <%= sort_class_helper('estado') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.estado'), 'estado', 'list' %>
      </th>
      <th style="width: 10%" <%= sort_class_helper('municipio') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.municipio'), 'municipio', 'list' %>
      </th>
      <th style="width: 10%" <%= sort_class_helper('parroquia') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.parroquia'), 'parroquia', 'list' %>
      </th>
      <th style="width: 17%" <%= sort_class_helper('unidad_produccion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.unidad_produccion'), 'unidad_produccion', 'list' %>
      </th>
      <th colspan="2" style="width: 6%">
	<%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>

    </tr>
  </thead>
  <tbody id="list-body">
    <%
    even_odd = 1
    for solicitud in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :solicitud => solicitud, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>