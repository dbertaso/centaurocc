<% sub_sector_onchange = remote_function(
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :method=>:get,
            :url=>{:controller=>'consulta_certificacion_presupuestaria',
            :action=>:sub_sector_form_change },
            :with=>"'sub_sector_id='+value") %>

<%= select(
      'solicitud', 'sub_sector_id',
      @sub_sector_list.map{|i| ["#{i.nombre} - #{i.descripcion}", i.id]},
      { :prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:onchange=>sub_sector_onchange + ';inputChange();' } ) %>
