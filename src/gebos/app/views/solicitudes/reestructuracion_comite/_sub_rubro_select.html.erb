<% sub_rubro_onchange = remote_function(
  :method=>:get, :loading =>'image_load()', :loaded => 'image_unload()',
  :url=>{:controller=>'reestructuracion_comite', :action=>:sub_rubro_change },
  :with=>"'sub_rubro_id='+value") %>

<%= select(
  'sub_rubro_id', '',
  @sub_rubro_list.map{|i| ["#{i.nombre} - #{i.descripcion}", i.id]},
  {:prompt=>I18n.t('Sistema.Body.Vistas.General.seleccionar')},
  { :class=>'select',:style=>'width:500px',:onchange=>sub_rubro_onchange + ';inputChange();' } ) %>
