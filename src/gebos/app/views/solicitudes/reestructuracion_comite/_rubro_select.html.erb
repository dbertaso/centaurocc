<% rubro_onchange = remote_function(
    :method=>:get, :loading =>'image_load()', :loaded => 'image_unload()',
    :url=>{:controller=>'reestructuracion_comite', :action=>:rubro_change },
    :with=>"'rubro_id='+value") %>

<%= select(
      'rubro_id', '',
      @rubro_list.map{|i| ["#{i.nombre} - #{i.descripcion}", i.id]},
      {:prompt=>I18n.t('Sistema.Body.Vistas.General.seleccionar')},
      { :class=>'select',:style=>'width:500px',:onchange=>rubro_onchange + ';inputChange();' } ) %>