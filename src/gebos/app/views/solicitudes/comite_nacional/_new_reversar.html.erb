<div id="errorCustomizado_<%=@solicitud.id%>" class="errorExplanation" style="display: none; text-align: left">
  <div id="errorExplanation" class="errorExplanation" style="display: none; text-align: left">
  </div>
</div>

<%= message %>

<%= form_remote_tag(
  :loading =>'image_load()',
  :loaded => 'image_unload()',
  :method=>:get,
  :confirm => params[:pregunta_confirmacion],
  :url => { :controller => 'comite_nacional', :action => :reversar, :id=>@solicitud.id, :mensaje_exito => I18n.t('Sistema.Body.Vistas.ComiteResumen.Mensajes.exitoso_reversar',:numero=>@solicitud.numero)} ) do-%>

<div class="marco-contenido2">	
  <table style="width: 100%">
    <tr>
      <td class="form-titulo" valign="bottom" colspan="2">
        <span><%=params[:titulo_1]%></span>

      </td>
    </tr>
  </table>
  <table style="width: 100%">
    <tr>
      <td style="width: 20%"><label><%=params[:titulo_2]%></label></td>
      <td>
        <%= text_area 'control_solicitud', 'comentario',
          :class=>'text', :style=>'width: 500px', :rows => 5,
          :onkeypress=>'inputChange();' -%>

      </td>
    </tr>
    <input type="hidden" name="codigo" value="<%= @codigo %>"/>
    <input type="hidden" name="codigo_exitoso" value="<%= @codigo_exitoso %>"/>
    <tr>
      <td colspan="2" align="left">
        <div id="botones1" ><br>
          <%= image_submit_tag I18n.t('Sistema.Body.Imagenes.guardar'),:id=>'button_save' -%>

          <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :method=>:get,
            :url => {:controller => 'comite_nacional', :action => :hide_reversar, :id => @solicitud.id}) -%>&nbsp;

        </div>
      </td>
    </tr>
  </table>
</div>	
<% end -%>
