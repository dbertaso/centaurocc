<% empresa_direccion = @empresa_direccion if empresa_direccion.nil? %>
<td>
	<%= empresa_direccion.tipo_nombre  %>
</td>
<td align="center">
	<%= format_bool empresa_direccion.correspondencia  %>
</td>
<td>
	<%= empresa_direccion.avenida %>
</td>
<td>
	<%= empresa_direccion.edificio %>
</td>
<td>
	<%= empresa_direccion.ciudad.nombre %>
</td>
<td align="center">
	<%= format_bool empresa_direccion.activo %>
</td>
<td style="text-align: right">
	<%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.modificar')), 
		:action => 'edit', :popup=>params[:popup], :empresa_id => @empresa.id, :id => empresa_direccion.id) %>&nbsp;
	<%= link_to_remote(
		image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
	  :loading =>'image_load()',
 	  :loaded => 'image_unload()',
	:confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
		:url => {:action => :delete, :empresa_id => @empresa.id, :id => empresa_direccion.id}) -%>
</td>