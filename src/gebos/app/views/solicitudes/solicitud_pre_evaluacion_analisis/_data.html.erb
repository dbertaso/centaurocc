<td align="center">
   
	<%= link_to image_tag(I18n.t('Sistema.Body.Imagenes.consultar'),:title=>'Consultar'), 
		{:controller => 'solicitud', :action => :view,
		:id => solicitud.solicitud_id,
        :controlador => 'solicitud_pre_evaluacion_analisis'} %>

  <%= link_to image_tag(I18n.t('Sistema.Body.Imagenes.modificar'),:title=>'Editar'),
		{:controller => 'solicitud_pre_evaluacion_analisis', :action => :edit,
		:id => solicitud.solicitud_id,
        :controlador => 'solicitud'} %>

        <% s = Solicitud.find(solicitud.solicitud_id)
           if s.SolicitudAspectosEvaluar.length > 0 && solicitud.const_id == 'ST0003' %>
              <%= link_to_remote( 'Distribuir',
                :loading =>'image_load()',
                :loaded => 'image_unload()',
                :confirm => "¿Está usted seguro que desea distribuir la Solicitud número #{solicitud.numero}?",
		:url => {:action => :avanzar, :id => solicitud.solicitud_id}) -%>
        <% end %>
</td>
