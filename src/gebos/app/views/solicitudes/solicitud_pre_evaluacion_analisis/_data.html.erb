      unidades_apoyo = ViewSolicitudPreEvaluacion.mostrar_estatus(solicitud.solicitud_id)
  end %>
  <span style="color: #FF0000"><b><%= solicitud.estatus %> <%= unidades_apoyo %></b></span>
