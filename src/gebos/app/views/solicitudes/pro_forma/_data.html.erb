<% proforma = @proforma if proforma.nil? %>

<td>
  <%= proforma.casa_proveedora.nombre %>
</td>

<td>
  <%= proforma.numero %>
</td>

<td>
  <%= proforma.fecha_emision_f %>
</td>

<td align="center">
  <%= proforma.fecha_caduca_f %>
</td>

<td align="center">
  <%= proforma.usuario.primer_nombre + ' ' + proforma.usuario.primer_apellido %>
</td>

<td align="center">
  <%= link_to image_tag(I18n.t('Sistema.Body.Imagenes.modificar'),:title=>'Editar'), 
    {:action => :edit, 
    :id => proforma.id, :popup=>true} %>
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'),:title =>'Eliminar'),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:action => :delete, :id => proforma.id }) -%>
</td>