<table width="100%" border="1">
  <tr>
    <td colspan="3" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Revisión Bandes</label></td>
  </tr>

  <tr>
    <td colspan="3" align="justify" style="font-size: 14px">
      Nombre del Perito: <%= @solicitud_avaluo_inmobiliario.nombre_perito %>
    </td>
  </tr>

  <tr>
    <td style="width: 33%; font-size: 14px">
      Fecha Avalúo: <%= @solicitud_avaluo_inmobiliario.fecha_avaluo_inmobiliario_f %>
    </td>
    <td style="width: 33%; font-size: 14px">
      Número Sudeban: <%= @solicitud_avaluo_inmobiliario.numero_sudeban_inmobiliario %>
    </td>
    <td style="width: 34%; font-size: 14px">
      Valor Avalúo: <%= display_number @solicitud_avaluo_inmobiliario.valor_avaluo_inmobiliario, '' %>
    </td>
  </tr>

</table>

<table style="width: 100%" border="1">

  <tr>
    <td colspan="4" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Inmobiliaria</label></td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px">
      Clasificación Inmobiliaria: <%= @solicitud_avaluo_inmobiliario.clasificacion_w %>
    </td>
  </tr>

  <tr>
    <td colspan="4" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Terreno</label></td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px">
      Espacio: <%= display_number @solicitud_avaluo_inmobiliario.espacio, '' %> M2
    </td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px" align="justify">
      Ubicación: <%= @solicitud_avaluo_inmobiliario.ubicacion.gsub("\n","<br/>") unless @solicitud_avaluo_inmobiliario.ubicacion.nil? %>
    </td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px" align="justify">
      Descripción del Bien: <%= @solicitud_avaluo_inmobiliario.descripcion.gsub("\n","<br/>") unless @solicitud_avaluo_inmobiliario.descripcion.nil? %>
    </td>
  </tr>
  
  <tr>
    <td colspan="4" style="font-size: 14px" align="center">
      Linderos
    </td>
  </tr>

  <tr>
    <td valign="top" style="width: 25%; font-size: 14px">
      Norte: <%= @solicitud_avaluo_inmobiliario.lindero_norte %>
    </td>
    <td valign="top" style="width: 25%; font-size: 14px">
      Sur: <%= @solicitud_avaluo_inmobiliario.lindero_sur %>
    </td>
    <td valign="top" style="width: 25%; font-size: 14px">
      Este: <%= @solicitud_avaluo_inmobiliario.lindero_este %>
    </td>
    <td valign="top" style="width: 25%; font-size: 14px">
      Oeste: <%= @solicitud_avaluo_inmobiliario.lindero_oeste %>
    </td>
  </tr>

  <tr>
    <td colspan="4" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Registro Protocolización del Bien</label></td>
  </tr>

  <tr>
    <td colspan="3" style="width: 75%; font-size: 14px">
      Nombre del Registro: <%= @solicitud_avaluo_inmobiliario.nombre_registro %>
    </td>
    <td style="width: 25%; font-size: 14px">
      Estado: <%= @solicitud_avaluo_inmobiliario.estado_w %>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="font-size: 14px">
      Fecha: <%= @solicitud_avaluo_inmobiliario.fecha_registro_f %>
    </td>
    <td colspan="2" style="font-size: 14px">
      Número de Registro: <%= @solicitud_avaluo_inmobiliario.numero_registro %>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="font-size: 14px">
      Tomo: <%= @solicitud_avaluo_inmobiliario.tomo_registro %>
    </td>
    <td colspan="2" style="font-size: 14px">
      Protocolo: <%= @solicitud_avaluo_inmobiliario.protocolo_registro %>
    </td>
  </tr>
    
</table>
<% if @solicitud_avaluo_inmobiliario.clasificacion == 'C' %>
<table style="width: 100%" border="1">

  <tr>
    <td colspan="4" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Construcción</label></td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px" align="justify">
      Tipo de Construcción: <%= @solicitud_avaluo_inmobiliario.tipo_construccion.gsub("\n","<br/>") unless @solicitud_avaluo_inmobiliario.nil? %>
    </td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px">
      Espacio: <%= @solicitud_avaluo_inmobiliario.espacio_construccion %> M2
    </td>
  </tr>

  <tr>
    <td colspan="4" style="font-size: 14px" align="justify">
      Ubicación: <%= @solicitud_avaluo_inmobiliario.ubicacion_construccion.gsub("\n","<br/>") unless @solicitud_avaluo_inmobiliario.ubicacion_construccion.nil? %>
    </td>
  </tr>

  <tr>
    <td colspan="4" align="center" style="background-color: #d9d4d4; font-size: 15px"><label>Registro Protocolización del Bien</label></td>
  </tr>

  <tr>
    <td colspan="3" style="width: 75%; font-size: 14px">
      Registro: <%= @solicitud_avaluo_inmobiliario.nombre_registro_constrccion %>
    </td>
    <td style="width: 25%; font-size: 14px">
      Estado: <%= @solicitud_avaluo_inmobiliario.estado_constrccion_w %>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="font-size: 14px">
      Fecha: <%= @solicitud_avaluo_inmobiliario.fecha_registro_constrccion_f %>
    </td>
    <td colspan="2" style="font-size: 14px">
      Número de Registro: <%= @solicitud_avaluo_inmobiliario.numero_registro_constrccion %>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="font-size: 14px">
      Tomo: <%= @solicitud_avaluo_inmobiliario.tomo_registro_constrccion %>
    </td>
    <td colspan="2" style="font-size: 14px">
      Protocolo: <%= @solicitud_avaluo_inmobiliario.protocolo_registro_constrccion %>
    </td>
  </tr>

  <tr>
    <td style="font-size: 14px" align="justify" colspan="4">
      Sistema Constructivo: <%= @solicitud_avaluo_inmobiliario.sistema_construtivo.gsub("\n","<br/>") unless @solicitud_avaluo_inmobiliario.sistema_construtivo.nil? %>
    </td>
  </tr>

</table>
<% end %>