<% municipio_onchange = remote_function(
	:loading =>'Element.show("loading")',
	:loaded => 'Element.hide("loading")',
	:url=>{:controller=>'cliente_empresa_direccion',
	:action=>:municipio_change },
	:with=>"'municipio_id='+value") %>
<%= select(
  'empresa_direccion', 'municipio_id',
  @municipio_select.map{|e| [e.nombre, e.id]},
  { },
  { :class=>'select', :onchange=>municipio_onchange + ';inputChange();' } ) %>
