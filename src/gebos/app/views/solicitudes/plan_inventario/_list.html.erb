<style type="text/css" >
  .tr_over{
    background-color:#cee3ba;
  }
</style>

<div id="message_catalogo" class="msg-notice" style="display:none; text-align: center">
  <%=I18n.t('Sistema.Body.Modelos.Errores.se_agrego_catalogo_con_serial')%>: << <span style="color:red;"><%=@catalogo_serial_agregar.to_s unless @catalogo_serial_agregar.nil?%></span> >>
</div>

<div class="marco-contenido" style=" background-color:#D7D7D7" align="left">
  <b><span style="color:black"><%=(I18n.t('Sistema.Body.Vistas.General.catalogo')).upcase%> <%=(I18n.t('Sistema.Body.Vistas.General.disponible')).upcase%></span></b> 
</div>

<br/>

<%#= form_remote_tag(
  :html=>{:id=>'form_plan_inventario_catalogo'},
  :loading =>'image_load()',
  :loaded => 'image_unload()',    
  :url => { :action => :list }) do
%>

<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th width="20px"> </th>

      <th> <%=I18n.t('Sistema.Body.Vistas.Form.convenio')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.rubro')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.tipo')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.marca')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.modelo')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.serial')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.chasis')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.monto')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.General.pais')%> </th>
      <th> <%=I18n.t('Sistema.Body.Vistas.Form.estatus')%> </th>      
    </tr>
  </thead>
  <tbody id="list_body">
    <%
    even_odd = 1
    for catalogo in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :catalogo => catalogo, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<br/>

<%# end %>

<%= form_pagination %>

<%=image_tag(I18n.t('Sistema.Body.Imagenes.aplicar'),:onclick=>"enviar_catalogo_inventario();") -%>
