<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 70%" style="text-align: left" <%= sort_class_helper('nombre_testigo') %>>
              <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'nombre_testigo', 'list' %>
      </th>

      <th style="width: 20%" style="text-align: center" <%= sort_class_helper('cedula_testigo') %>>
              <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.cedula'), 'cedula_testigo', 'list' %>
      </th>
      <th><%=I18n.t('Sistema.Body.Vistas.General.acciones')%></th>
    </tr>
  </thead>

  <tbody id="list_body">
    <%  even_odd = 1
        for item in @list
                  even_odd = 1 - even_odd %>
          
          <%= render :partial => 'row', :locals => { :item => item, :even_odd => even_odd } -%>
        <% end %>
  </tbody>
</table>

<%= render :partial => 'abogado' -%>

