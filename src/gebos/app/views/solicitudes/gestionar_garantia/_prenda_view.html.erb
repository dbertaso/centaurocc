  <tr>
    <td><label><%=I18n.t('Sistema.Body.Vistas.GestionarGarantia.Etiquetas.empresa_factura')%></label></td>
    <td>
      <%= @solicitud_avaluo_prenda.empresa_factura %>
    </td>
  </tr>

  <tr>
    <td><label><%="#{I18n.t('Sistema.Body.Vistas.General.rif')} #{I18n.t('Sistema.Body.Vistas.General.empresa')}"%></label></td>
    <td>
      <%= @solicitud_avaluo_prenda.rif_empresa_difinitivo %>
    </td>
  </tr>
  
</table>