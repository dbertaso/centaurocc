<table style="width: 100%">
  <tr>
    <td style="width: 20%">
      <label><%=I18n.t('Sistema.Body.Vistas.General.urbanizacion_barrio_sector')%></label>
    </td>
    <td style="width: 80%">
      <%if @direccion.class.name.to_s == "UnidadProduccion" %>
        <%= @direccion.sector.to_s %>
        <input type="hidden" name="solicitud_avaluo[urbanizacion]" value="<%= @direccion.sector %>"> 
      <%elsif (@direccion.class.name.to_s == "PersonaDireccion" || @direccion.class.name.to_s == "EmpresaDireccion")%>
        <%= @direccion.zona %>
        <input type="hidden" name="solicitud_avaluo[urbanizacion]" value="<%= @direccion.zona %>"> 
      <%end%>
    </td>
  </tr>

  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.avenida_calle_callejon')%></label>
    </td>
    <td>
      <%if @direccion.class.name.to_s == "UnidadProduccion" %>
        <%= @direccion.direccion %>
        <input type="hidden" name="solicitud_avaluo[calle]" value="<%= @direccion.direccion %>" >
      <%elsif (@direccion.class.name.to_s == "PersonaDireccion" || @direccion.class.name.to_s == "EmpresaDireccion")%>
        <%= @direccion.avenida %>
        <input type="hidden" name="solicitud_avaluo[calle]" value="<%= @direccion.avenida %>" >
      <%end%>
    </td>
  </tr>

  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.casa_edificio_galpon')%></label>
    </td>
    <td>
      <%if @direccion.class.name.to_s == "UnidadProduccion" %>
        <input type="hidden" name="solicitud_avaluo[casa]" value=" " >
      <%elsif (@direccion.class.name.to_s == "PersonaDireccion" || @direccion.class.name.to_s == "EmpresaDireccion")%>
        <%= @direccion.edificio %>
        <input type="hidden" name="solicitud_avaluo[casa]" value="<%= @direccion.edificio %>" >
      <%end%>
    </td>
  </tr>

  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.numero_apto_casa')%></label>
    </td>
    <td>
      <%if @direccion.class.name.to_s == "UnidadProduccion" %>
        <input type="hidden" name="solicitud_avaluo[numero_apta]" value=" ">
      <%elsif (@direccion.class.name.to_s == "PersonaDireccion" || @direccion.class.name.to_s == "EmpresaDireccion")%>
        <%= @direccion.numero %>
        <input type="hidden" name="solicitud_avaluo[numero_apta]" value="<%= @direccion.numero %>">
      <%end%>
    </td>
  </tr>

  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.piso')%></label>
    </td>
    <td>
      <%if @direccion.class.name.to_s == "UnidadProduccion" %>
        <input type="hidden" name="solicitud_avaluo[piso]" value=" ">
      <%elsif (@direccion.class.name.to_s == "PersonaDireccion" || @direccion.class.name.to_s == "EmpresaDireccion")%>
        <%= @direccion.piso %>
        <input type="hidden" name="solicitud_avaluo[piso]" value="<%= @direccion.piso %>">
      <%end%>
    </td>
  </tr>

  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.punto_de_referencia')%></label>
    </td>
    <td>
      <%= @direccion.referencia %>
      <input type="hidden" name="solicitud_avaluo[punto_referencia]" value="<%= @direccion.referencia %>" >
    </td>
  </tr>

  <tr>
    <td><label><%=I18n.t('Sistema.Body.Vistas.General.estado')%></label></td>
    <td>
      <%= @direccion.ciudad.estado.nombre %>
      <input type="hidden" name="solicitud_avaluo[estado_id]" value="<%= @direccion.ciudad.estado.id %>">
    </td>
  </tr>

  <tr>
    <td><label><%=I18n.t('Sistema.Body.Vistas.General.municipio')%></label></td>
    <td>
      <%= @direccion.municipio.nombre %>
      <input type="hidden" name="solicitud_avaluo[municipio_id]" value="<%= @direccion.municipio.id %>" >
    </td>
  </tr>

  <tr>
    <td><label><%=I18n.t('Sistema.Body.Vistas.General.parroquia')%></label></td>
    <td>
      <%= @direccion.parroquia.nombre %> 
      <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.deshacer'),:title=>I18n.t('Sistema.Body.Controladores.Accion.deshacer')),
        :method=>:get, :loading =>'image_load()',:loaded => 'image_unload()',
        :id=>'button_enviar',
        :onclick=>'if (varEnviado) { return false; } else {varEnviado = true;}',
        :url => {:action => :ubicacion, :id =>'3', :solicitud_id =>@solicitud_id, :solicitud_avaluo_id => @solicitud_avaluo.id}) -%>
      <input type="hidden" name="solicitud_avaluo[parroquia_id]" value="<%= @direccion.parroquia.id %>">
    </td>
  </tr>
</table>
<br></br>