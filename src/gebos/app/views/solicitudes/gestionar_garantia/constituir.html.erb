<div class="marco-contenido">

  <div class="marco-titulo">
    <div><div>
        <%= "#{I18n.t('Sistema.Body.Vistas.GestionarGarantia.Etiquetas.modificando_condiciones')}" %> <span class="titulo_modificar">'<%= @solicitud.numero %>'</span> <%= I18n.t('Sistema.Body.General.beneficiario') %> <span class="titulo_modificar">'<%= @solicitud.cliente.class.to_s=='ClienteEmpresa' ? @solicitud.cliente.empresa.nombre : @solicitud.cliente.persona.nombre_corto  %>'</span> - <span class="titulo_modificar"><%= @solicitud.estatus_w -%></span>
      </div></div>
  </div>


  <%= form_remote_tag(
    :method=>:get,:loading =>'image_load()', :loaded => 'image_unload()',
    :url => { :action => @metodo.to_sym, :solicitud_tipo_garantia_id=>@solicitud_tipo_garantia.id, 
      :solicitud_id=>@solicitud.id, :id=>@solicitud_tipo_garantia.id }) do -%>

    <%= render :partial => 'form' %>
    <br/>
    <div id="buttons_edit" style="display: none">
      <%= form_buttons_edit :action => :edit, :id => @solicitud.id %>
    </div>

    <%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar'), :title=>I18n.t('Sistema.Body.Vistas.General.cancelar')),
      { :action => :edit, :id => @solicitud.id },  { :id=>'button_close' } ) -%>

  <% end -%>
  <br/><br/>
</div>
