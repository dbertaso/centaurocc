<div class="marco-contenido">
  <%= form_title_search %>

  <%= form_remote_tag(
    :method => :get, :loading =>'image_load()', :loaded => 'image_unload()',
    :url => { :action => :list } ) do -%>
    <table>
      <tr>
        <td style="width: 130px">
          <label><%=I18n.t('Sistema.Body.Vistas.Form.nro_tramite')%></label>
        </td>
        <td>
          <%= text_field_tag 'numero', '', :class=>'text', :maxlength=>'8', :style=>'width: 100px'  %>
        </td>
      </tr>

      <tr>
        <td style="width: 130px">
          <label><%=I18n.t('Sistema.Body.Vistas.Form.nro_financiamiento')%></label>
        </td>
        <td>
          <%= text_field_tag 'numero_prestamo', '', :class=>'text', :maxlength=>'10', :style=>'width: 100px'  %>
        </td>
      </tr>

      <tr>
        <td style="width: 130px">
          <label><%=I18n.t('Sistema.Body.Vistas.VisitaSolicitud.Etiquetas.cedula_rif')%></label>
        </td>
        <td>
          <%= text_field_tag 'identificacion', '', :class=>'text', :maxlength=>'12', :style=>'width: 100px'  %> <%=I18n.t('Sistema.Body.General.ejemplo_documento')%>
        </td>
      </tr>

      <tr>
        <td style="width: 130px">
          <label><%=I18n.t('Sistema.Body.General.beneficiario')%></label>
        </td>
        <td>
          <%= text_field_tag 'nombre', '', :class=>'text', :maxlength=>'30', :style=>'width: 200px'  %>&emsp;
        </td>
      </tr>
      <tr>
      <td>
        <label><%= I18n.t('Sistema.Body.Modelos.Programa.Columnas.moneda') %>:</label>
      </td>
      <td><%= select(
          'moneda_id', '',
          options_from_collection_for_select(@moneda_list, 'id', 'nombre'),
          {:prompt => "#{I18n.t('Sistema.Body.Vistas.Form.seleccionar')}"},
          {:class=>'select', :onchange=>'inputChange();'} ) %>&emsp;&emsp;
        
        <%= image_submit_tag(image_path(I18n.t('Sistema.Body.Imagenes.buscar')), :title=>I18n.t('Sistema.Body.Vistas.General.buscar')) -%>
      </td>
    </tr>

    </table>
  <%end%>
  <br></br>
  <%= error %>
  <%= message %>
  <div id="list">  </div>
</div>