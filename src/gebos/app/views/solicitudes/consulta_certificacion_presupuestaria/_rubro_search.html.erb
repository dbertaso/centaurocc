<% rubro_onchange = remote_function(
	:loading =>'image_load()',
        :loaded => 'image_unload()',
        :method=>:get,
	:url=>{:controller=>'consulta_certificacion_presupuestaria',
	:action=>:rubro_change },
	:with=>"'rubro_id='+value") %>
<%= select(
  'rubro_id', '',
  @rubro_list.map{|e| [e.nombre, e.id]},
  { :prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar')},
  { :class=>'select', :onchange=>rubro_onchange + ';inputChange();cList();' } ) %>
