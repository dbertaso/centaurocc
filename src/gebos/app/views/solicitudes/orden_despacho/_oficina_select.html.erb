             <% oficina_onchange = remote_function(
               :loading =>'image_load()',
               :loaded => 'image_unload()',
               :method=>:get,
               :url=>{:controller=>'orden_despacho',
               :action=>:oficina_change },
               :with=>"'id='+value") %>

<%= select(
  'oficina_id', '',
  @oficina_select.map{|c| [c.nombre, c.id]},
 {:prompt=> I18n.t('Sistema.Body.Vistas.Form.seleccionar')},
  { :class=>'select', :onchange=>oficina_onchange + ';inputChange();' } ) %>
