<%casa_onchange = remote_function(
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :method=>:get,
            :url=>{:controller=>'orden_despacho_consulta',
            :action=>:casa_change },
            :with=>"'id='+value") %>

<%= select(
      'casa_proveedora_id', '',
      @casa_proveedora_select.map{|i| [i.nombre, i.id]},
      { :prompt=> I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
      { :class=>'select',:onchange=> casa_onchange +';inputChange();',:style=>'width:240px' } ) %>

