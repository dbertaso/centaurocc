<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 50px" <%= sort_class_helper('numero') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.Vistas.General.nro')} #{I18n.t('Sistema.Body.Vistas.General.solicitud')}", 'numero', 'list' %>
      </th>

      <th style="width: 50px" <%= sort_class_helper('cedula_rif') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.Vistas.General.cedula')}/#{I18n.t('Sistema.Body.Vistas.General.rif')}", 'cedula_rif', 'list' %>
      </th>

      <th style="width: 150px" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.General.beneficiario'), 'nombre', 'list' %>
      </th>

      
      <th style="width: 60px" <%= sort_class_helper('estatus') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.estatus'), 'estatus', 'list' %>
      </th>     

      <th style="width: 60px" <%= sort_class_helper('monto_solicitado') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.monto'), 'monto_solicitado', 'list' %>
      </th>
      
      <th style="width: 60px" <%= sort_class_helper('(select nombre from moneda where id=moneda_id)') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Modelos.Programa.Columnas.moneda'), '(select nombre from moneda where id=moneda_id)', 'list' %>
      </th>

<th style="width: 60px" <%= sort_class_helper('fecha_solicitud') %>>
          <%= sort_link_helper I18n.t('Sistema.Body.Modelos.Solicitud.Columnas.fecha_solicitud'), 'fecha_solicitud', 'list' %>
        </th>

<th style="width: 110px" <%= sort_class_helper('programa') %>>
          <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.programa'), 'programa', 'list' %>
        </th>
      <th style="width: 110px" <%= sort_class_helper('estado') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.estado'), 'estado', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('oficina') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.oficina'), 'oficina', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('sector') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.sector'), 'sector', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('sub_sector') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.sub_sector'), 'sub_sector', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('rubro') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.rubro'), 'rubro', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('sub_rubro') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.sub_rubro'), 'sub_rubro', 'list' %>
      </th>

      <th style="width: 110px" <%= sort_class_helper('actividad') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.actividad'), 'actividad', 'list' %>
      </th>

      <th style="width: 60px">
        <%= I18n.t('Sistema.Body.Vistas.General.acciones') %>
      </th>
    </tr>

  </thead>
  <tbody id="list-body">
    <%  
    even_odd = 1
    for solicitud in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :solicitud => solicitud, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>