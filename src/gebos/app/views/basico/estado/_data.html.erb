 	  :loaded => 'image_unload()',
	:confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
		:url => {:controller => 'estado', :action => :delete, :id => estado.id}) if vlink 'delete' -%>
