<% item = @condicion_saco if item.nil? %>
<td style="text-align: center">
  <%= item.nombre unless item.nil?%>
</td>
<td style="text-align: center">
  <%= item.porcentaje_f unless item.nil?%>
</td>
<td style="text-align: center">
  <%= format_bool(item.activo) %>
</td>

<td style="text-align: center">
  <%= link_to(image_tag(image_path(I18n.t('Sistema.Body.Imagenes.modificar')), :title => I18n.t('Sistema.Body.Controladores.Accion.modificar')), :action => 'edit', 
    :method => :get, :silo_id => @silo.id, :popup=>params[:popup], :id => item.id ) if vlink 'edit' %>
  
  <%= link_to_remote(image_tag(image_path(I18n.t('Sistema.Body.Imagenes.eliminar')), :title => I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()', :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'condicion_sacos', :action => :delete, :id => item.id}) if vlink 'delete' -%>
</td>
