<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 230px" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'nombre', 'list' %>
      </th>
      <th style="width: 360px" <%= sort_class_helper('apellido') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.apellido'), 'apellido', 'list' %>
      </th>
      <th style="width: 40px" <%= sort_class_helper('cedula') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.cedula'), 'cedula', 'list' %>
      </th>
      <th style="width: 50px">
        <%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>
    </tr>
  </thead>
  <tbody id="list_body">
    <%
    even_odd = 1
    for miembro_comite in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => {:miembro_comite => miembro_comite, :even_odd => even_odd} -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>
