<tr id="row_<%= @vacuna.id %>_edit">
	  <td class="lista-form" colspan="5">

		  <%= form_title_edit @vacuna.descripcion %>
	
		  <%= error "row_#{@vacuna.id}" %>

		  <%= form_remote_tag(
                    :loading =>'image_load()',
                    :loaded => 'image_unload()',
		    :url => { :action => :save_edit, :id => @vacuna.id } ) do-%>
					<%= render  'form' %>
					<%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
						:method=> :get,
					    :loading =>'image_load()',
						:loaded => 'image_unload()',
		                :url => { :action => :cancel_edit, :id => @vacuna.id}) -%>
	    </td>
      </tr>
    </table>
    <% end -%>
	</td>
</tr>
