<tr id="row_<%= @tipo_topografia.id %>_edit">
  <td class="lista-form" colspan="5">

    <%= form_title_edit @tipo_topografia.nombre %>

    <%= error "row_#{@tipo_topografia.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @tipo_topografia.id } ) do -%>
    <%= render :partial => 'form' %>
    <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar'), :title=>I18n.t('Sistema.Body.Vistas.General.cancelar')),
      :method => :get,
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :cancel_edit, :id => @tipo_topografia.id}) -%>
  </td>
</tr>
</table>
<% end %>
</td>
</tr>
