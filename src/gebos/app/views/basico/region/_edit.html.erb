<tr id="row_<%= @region.id %>_edit">
	<td class="lista-form" colspan="3">
	
		<%= form_title_edit @region.nombre %>
	
		<%= error "row_#{@region.id}" %>
		
		<%= form_remote_tag(
		  :loading =>'image_load()',
			:loaded => 'image_unload()',
		  :url => { :action => :save_edit, :id => @region.id } ) do-%>
	
					<%= render 'form' %>
					<%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
					  :loading =>'image_load()',
						:loaded => 'image_unload()',
						:method=>:get,
		        :url => { :action => :cancel_edit, :id => @region.id}) -%>
			   </td>
		    </tr>
		  </table>
		<% end -%>
	</td>
</tr>
