<tr id="row_<%= @modalidad_financiamiento.id %>_edit">
  <td class="lista-form" colspan="4">
  
    <%= form_title_edit @modalidad_financiamiento.nombre %>
  
    <%= error "row_#{@modalidad_financiamiento.id}" %>
  
    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @modalidad_financiamiento.id } ) do -%>
          <%= render 'form' %>
          <%= link_to_remote(
            image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :url => { :action => :cancel_edit, :id => @modalidad_financiamiento.id}) -%>
         </td>
        </tr>
      </table>
    <% end -%>
  </td>
</tr>
