<tr id="row_<%= @motivos_atraso.id %>_edit">
  <td class="lista-form" colspan="4">
  
    <%= form_title_edit @motivos_atraso.descripcion %>
  
    <%= error "row_#{@motivos_atraso.id}" %>
  
    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @motivos_atraso.id } ) do -%>
  
        <%= render  'form' %>
  
          <%= link_to_remote(
            image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :url => { :action => :cancel_edit, :id => @motivos_atraso.id}) -%>
         </td>
        </tr>
      </table>
    <% end -%>
  </td>
</tr>
