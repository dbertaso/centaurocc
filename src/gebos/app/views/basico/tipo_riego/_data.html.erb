<% tipo_riego = @tipo_riego if tipo_riego.nil? %>
<td>
  <%= tipo_riego.nombre  %>
</td>	
<td>
  <%= tipo_riego.descripcion  %>
</td>	


<td style="text-align: center">
  <%= format_bool(tipo_riego.activo)  %>
</td>
<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')),
    :method => :get,
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :url => {:controller => 'tipo_riego', :action => :edit, :id => tipo_riego.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'tipo_riego', :action => :delete, :id => tipo_riego.id}) if vlink 'delete' -%>
</td>

