<script language="javascript">varEnviado = false;</script>
<table style="width: 100%">
  <tr>
    <td style="width: 25%">
      <label><%=I18n.t('Sistema.Body.Vistas.General.nombre')%></label>
      <label style="color:red"><%=I18n.t('Sistema.Body.Vistas.Form.asterisco')%></label>
    </td>
    <td style="width: 75%">
      <%= text_field 'ciclo_productivo', 'nombre', :class=>'text', :style=>'width: 500px', :maxlength=>'50'  -%>
    </td>
  </tr>
  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.General.descripcion')%></label> 
      <label style="color:red"><%=I18n.t('Sistema.Body.Vistas.Form.asterisco')%></label>
    </td>
    <td>
      <%= text_field 'ciclo_productivo', 'descripcion', :class=>'text', :style=>'width: 500px', :maxlength=>'250'  -%>
    </td>
  </tr>
  <tr>
    <td>
      <label><%=I18n.t('datetime.prompts.month')<< " " << I18n.t('Sistema.Body.Vistas.Form.inicio')%></label> 
      <label style="color:red"><%=I18n.t('Sistema.Body.Vistas.Form.asterisco')%></label>
    </td>
    <td>
      <%= select(
        'ciclo_productivo','mes_inicio',
        CicloProductivo.meses.map { |m| [m[0], m[1]]},
        {:prompt => I18n.t('Sistema.Body.Vistas.General.seleccionar')},
        { :class=>'select'} ) %>
    </td>
  </tr>
  <tr>
    <td>
      <label><%=I18n.t('datetime.prompts.month')<< " " << I18n.t('Sistema.Body.Vistas.Form.fin')%></label> 
      <label style="color:red"><%=I18n.t('Sistema.Body.Vistas.Form.asterisco')%></label>
    </td>
    <td>
      <%= select(
        'ciclo_productivo','mes_fin',
        CicloProductivo.meses.map { |m| [m[0], m[1]]},
        {:prompt => I18n.t('Sistema.Body.Vistas.General.seleccionar')},
        { :class=>'select'} ) %>
    </td>
  </tr>  
  <tr>
    <td>
      <label><%=I18n.t('Sistema.Body.Vistas.General.activo')%></label> 
      
    </td>
    <td>
      <%= check_box 'ciclo_productivo', 'activo',
        :checked_value=>"1",
        :unchecked_value=>"0",
        :onclick=>'inputChange();' -%>
    </td>
  </tr>

  <tr>
    <td colspan="2" style="text-align: left">
      <%= image_submit_tag(I18n.t('Sistema.Body.Imagenes.guardar'), :onclick=>"if (varEnviado) { return false; } else {varEnviado = true;}", :id=>'button_save') -%>

