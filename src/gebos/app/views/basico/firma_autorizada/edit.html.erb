<%= form_title_edit @firma_autorizada.cargo.descripcion %>
    
<div class="marco-contenido2">

  <%= form_remote_tag(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :url => { :action => :save_edit, :id=>@firma_autorizada.id } ) do -%>
    <%= render 'form' %>
    
    <div id="buttons_edit" style="display: none">
      <%= form_buttons_edit %>
    </div>
    
    <%= link_to(image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cerrar'))),
      { :action => :index },
      { :id=>'button_close' } ) -%>
    
  <%end -%>
</div>
