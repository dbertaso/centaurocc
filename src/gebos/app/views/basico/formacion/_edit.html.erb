<tr id="row_<%= @formacion.id %>_edit">
  <td class="lista-form" colspan="2">
  
    <%= form_title_edit @formacion.nombre %>
  
    <%= error "row_#{@formacion.id}" %>
    
    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @formacion.id } ) do -%>
  
          <%= render 'form' %>
          <%= link_to_remote(
            image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :url => { :action => :cancel_edit, :id => @formacion.id}) -%>
         </td>
      <td></td>
      <td></td>
      <td></td>
        </tr>
      </table>
    <%end -%>
  </td>
</tr>
