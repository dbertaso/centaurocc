<tr id="row_<%= @marca_maquinaria.id %>_edit">
  <td class="lista-form" colspan="5">

    <%= form_title_edit @marca_maquinaria.nombre %>

    <%= error "row_#{@marca_maquinaria.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @marca_maquinaria.id } ) do -%>
    <%= render 'form' %>
    <%= link_to_remote(
      image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :cancel_edit, :id => @marca_maquinaria.id}) -%>
  </td>
</tr>
</table>
<% end -%>
</td>
</tr>
