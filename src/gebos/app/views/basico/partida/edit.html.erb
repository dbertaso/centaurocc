<%= form_title_edit @partida.nombre %>
<%= render 'basico/sector/common/tabs' %>
<div class="marco-contenido2">

  <%= error %>
  <%= message %>

  <%= form_remote_tag(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :url => { :action => :save_edit, :actividad_id => @actividad.id, :id=>@partida.id } ) do -%>
  <%= render 'form' %>

  <div id="buttons_edit" style="display: none">
    <%= form_buttons_edit :actividad_id =>@actividad.id, :popup=>params[:popup] %>
  </div>

  <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
    { :action => :index, :actividad_id => @actividad.id },
    { :id=>'button_close' } ) -%>

  <% end -%>
</div>
