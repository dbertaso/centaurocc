<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 360px" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.MensajesCorreo.Etiquetas.mensaje'), 'nombre', 'list' %>
      </th>
      <th style="width: 360px" <%= sort_class_helper('descripcion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.MensajesCorreo.Etiquetas.contenido'), 'descripcion', 'list' %>
      </th>
      <th>
        <%= I18n.t('Sistema.Body.Vistas.General.activo') %>
      </th>
      <th style="width: 50px">
        <%= I18n.t('Sistema.Body.Vistas.General.acciones') %>
      </th>
    </tr>
  </thead>
  <tbody id="list_body">
    <%
    even_odd = 1
    for mensajes_sms in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :mensajes_sms => mensajes_sms, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>
