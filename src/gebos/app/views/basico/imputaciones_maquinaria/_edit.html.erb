<tr id="row_<%= @condicion_pasto.id %>_edit">
  <td class="lista-form" colspan="5">

    <%= form_title_edit @condicion_pasto.nombre %>

    <%= error "row_#{@condicion_pasto.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @condicion_pasto.id } ) -%>
    <%= render :partial => 'form' %>
    <%= link_to_remote(
      image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :cancel_edit, :id => @condicion_pasto.id}) -%>
  </td>
</tr>
</table>
<% end -%>
</td>
</tr>
