  <% sub_sector_onchange = remote_function(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :method => :get,
      :url=>{:controller=>'analista_cobranzas',
      :action=>:sub_sector_change },
      :with=>"'id='+value") %>
  <%= select(
              'analista_cobranzas', 'sub_sector_id',
              @sub_sector_select.map{|i| [i.nombre, i.id]},
              {:prompt=>I18n.t('Sistema.Body.Vistas.CondicionesFinanciamiento.Etiquetas.seleccione_sub_sector')},
              { :class=>'select', :onchange=>sub_sector_onchange + ';inputChange();' }
            ) %>
