<tr id="row_<%= @faenas_pesca.id %>_edit">
  <td class="lista-form" colspan="8">

    <%= form_title_edit @faenas_pesca.destino_captura %>

    <%= error "row_#{@faenas_pesca.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id_faena => @faenas_pesca.id } ) do -%>
    <%= render :partial => 'form' %>
    <%= link_to_remote(
      image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :method=>:get,
      :url => { :action => :cancel_edit, :id => @faenas_pesca.id}) -%>
  </td>
</tr>
</table>
<% end -%>
</td>
</tr>