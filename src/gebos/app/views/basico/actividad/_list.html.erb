<table class="lista" style="width: 100%">
  <thead>
    <tr>

      <th style="width: 170px" >
        <%= "#{I18n.t('Sistema.Body.Vistas.General.codigo')} #{I18n.t('Sistema.Body.Vistas.General.sector')}" %>
      </th>
      <th style="width: 170px" >
        <%= "#{I18n.t('Sistema.Body.Vistas.General.nombre')} #{I18n.t('Sistema.Body.Vistas.General.sector')}"%>
      </th>
      <th style="width: 170px" >
        <%= "#{I18n.t('Sistema.Body.Vistas.General.codigo')} #{I18n.t('Sistema.Body.Vistas.General.sub_rubro')}" %>
      </th>
      <th style="width: 170px" >
        <%= "#{I18n.t('Sistema.Body.Vistas.General.nombre')} #{I18n.t('Sistema.Body.Vistas.General.sub_rubro')}" %>
      </th>
      <th style="width: 170px" <%= sort_class_helper('actividad.codigo') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.Vistas.General.codigo')} #{I18n.t('Sistema.Body.Vistas.General.actividad')}", 'actividad.codigo', 'list' %>
      </th>
      <th style="width: 170px" <%= sort_class_helper('actividad.nombre') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.Vistas.General.nombre')} #{I18n.t('Sistema.Body.Vistas.General.actividad')}", 'actividad.nombre', 'list' %>
      </th>
      <th style="width: 200px" <%= sort_class_helper('actividad.descripcion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.descripcion'), 'actividad.descripcion', 'list' %>
      </th>
      <th style="width: 80px" >
        <%= I18n.t('Sistema.Body.Vistas.General.activo') %>
      </th>
      <th style="width: 15px">
        <%=I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>
    </tr>
  </thead>
  <tbody id="list_body">
  <%
    even_odd = 1
    for actividad in @list
      even_odd = 1 - even_odd
  %>
    <%= render :partial => 'row', :locals => { :actividad => actividad, :even_odd => even_odd } -%>
  <% end %>
  </tbody>

</table>

<%= form_pagination %>
