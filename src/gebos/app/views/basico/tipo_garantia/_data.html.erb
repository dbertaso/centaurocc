<% tipo_garantia = @tipo_garantia if tipo_garantia.nil? %>

<td>
  <%= tipo_garantia.nombre  %>
</td>	
<td>
  <%= tipo_garantia.descripcion  %>
</td>	
<td style="text-align: center">
  <%= format_bool(tipo_garantia.activo)  %>
</td>	
<td style="text-align: right">
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.modificar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method =>:get,
    :url => {:controller => 'tipo_garantia', :action => :edit, :id => tipo_garantia.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'tipo_garantia', :action => :delete, :id => tipo_garantia.id}) if vlink 'delete' -%>
</td>