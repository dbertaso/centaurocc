<table class="lista" style="width: 99%">
  <thead>
    <tr>
      <th style="width:10%" style="text-align: center" <%= sort_class_helper('id') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.id') << " " << I18n.t('Sistema.Body.Vistas.General.registro'), 'id', 'list' %>
      </th>
      
      <th style="width:10%" style="text-align: center" <%= sort_class_helper('numero_contrato') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nro') << " " << I18n.t('Sistema.Body.Vistas.Form.convenio'), 'numero_contrato', 'list' %>
      </th>

      <th style="width:20%" style="text-align: center" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'nombre', 'list' %>
      </th>

      <th style="width:20%" style="text-align: center" <%= sort_class_helper('fecha_contrato') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.fecha') << " " << I18n.t('Sistema.Body.Vistas.Form.contrato'), 'fecha_contrato', 'list' %>
      </th>
      
      <th style="width:10%" style="text-align: center" <%= sort_class_helper('naturaleza') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.naturaleza'), 'naturaleza', 'list' %>
      </th>

      <th style="width:5%" style="text-align: center">
        <%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>
    </tr>
  </thead>

  <tbody id="list_body">
    <% even_odd = 1
    for item in @list
      even_odd = 1 - even_odd %>
      <%=render :partial => 'row', :locals => { :item => item, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>
<%= form_pagination %>
