<table class="lista" style="width: 100%">
  <thead>
    <tr>
      <th style="width: 200px" <%= sort_class_helper('descripcion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.ActividadEconomica.Etiquetas.actividad_economica'), 'descripcion', 'list' %>
      </th>
      <th style="width: 200px" <%= sort_class_helper('actividad_economica.sector_economico.descripcion') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.ActividadEconomica.Etiquetas.sector_econimico'), 'actividad_economica.sector_economico.descripcion', 'list' %>
      </th>
      <th style="width: 200px" <%= sort_class_helper('actividad_economica.sector_tipo.nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.tipo'), 'actividad_economica.sector_tipo.nombre', 'list' %>
      </th>
      <th style="width: 40px">
        I18n.t('Sistema.Body.Vistas.General.General.acciones')
      </th>
    </tr>
  </thead>
  <tbody id="list_body">
    <%
    even_odd = 1
    for actividad_economica in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :actividad_economica => actividad_economica, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>
