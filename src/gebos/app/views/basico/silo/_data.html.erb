<% silo = @silo if silo.nil? %>
<td>
  <%= silo.nombre  %>
</td>
<td>
  <%= silo.direccion  %>
</td>	
<td>
  <%= silo.estado.nombre  %>
</td>	
<td>
  <%= silo.ciudad.nombre  %>
</td>
<td>
  <%= silo.municipio.nombre  %>
</td>
<td>
  <%= silo.persona_contacto  %>
</td>	
<td>
  <%= silo.telefono  %>
</td>	
<td style="text-align: right">
  <%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')), :action => 'edit', :method => :get, :popup=>params[:popup], :id => silo.id ) if vlink 'edit' %>
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'silo', :action => :delete, :id => silo.id}) if vlink 'delete' -%>
</td>

