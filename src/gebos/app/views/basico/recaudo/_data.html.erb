<% recaudo = @recaudo if recaudo.nil? %>
<td>
  <%= recaudo.nombre  %>
</td>	
<td>
  <%= recaudo.descripcion  %>
</td>	
<td style="text-align: center">
  <%= format_bool(recaudo.obligatorio)  %>	
</td>	
<td style="text-align: center">
  <%= format_bool(recaudo.activo)  %>
</td>
<td><%= recaudo.tipo_cliente.nombre unless recaudo.tipo_cliente.nil? %></td>
<td><%= recaudo.sector.nombre unless recaudo.sector.nil? %></td>
<td><%= recaudo.sub_sector.nombre unless recaudo.sub_sector.nil? %></td>
<td style="text-align: right">
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.modificar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method =>:get,
    :url => {:controller => 'recaudo', :action => :edit, :id => recaudo.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'recaudo', :action => :delete, :id => recaudo.id}) if vlink 'delete' -%>
</td>
