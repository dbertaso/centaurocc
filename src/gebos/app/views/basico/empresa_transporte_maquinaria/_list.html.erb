<table class="lista" style="width: 100%">
  <thead>
    <tr>

      <th style="width: 150px" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre') << " " << I18n.t('Sistema.Body.Vistas.General.empresa'), 'nombre', 'list' %>
      </th> 			
      <th style="width: 60px" <%= sort_class_helper('rif') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.rif'), 'rif', 'list' %>
      </th> 
      <th style="width: 30px" <%= sort_class_helper('telefono') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.telefono'), 'telefono', 'list' %>
      </th>
      <th style="width: 150px" <%= sort_class_helper('persona_contacto') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.persona') << " " << I18n.t('Sistema.Body.Vistas.General.de') << " " << I18n.t('Sistema.Body.Vistas.General.contacto'), 'persona_contacto', 'list' %>
      </th> 
      <th style="width: 80px" <%= sort_class_helper('estado.nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.estado'), 'estado.nombre', 'list' %>
      </th>
      <th style="width: 80px" <%= sort_class_helper('municipio.nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.municipio'), 'municipio.nombre', 'list' %>
      </th>
      <th style="width: 80px" <%= sort_class_helper('ciudad.nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.ciudad'), 'ciudad.nombre', 'list' %>
      </th>
      <th style="width: 10px" <%= sort_class_helper('activo') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.activo'), 'activo', 'list' %>
      </th> 			 			
      <th style="width: 10px" align="center">
        <%=I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>
    </tr>		
  </thead>
  <tbody id="list_body">
    <%  
    even_odd = 1
    for empresa_transporte_maquinaria in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :empresa_transporte_maquinaria => empresa_transporte_maquinaria, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>
<%= form_pagination %>
