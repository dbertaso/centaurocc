<tr id="row_<%= @origen_fondo.id %>_edit">
  <td class="lista-form" colspan="4">
  
    <%= form_title_edit @origen_fondo.nombre %>
  
    <%= error "row_#{@origen_fondo.id}" %>
  
    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @origen_fondo.id } ) do -%>
          <%= render 'form' %>
          <%= link_to_remote(
            image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
                      :loading =>'image_load()',
                      :loaded => 'image_unload()',
                      :url => { :action => :cancel_edit, :id => @origen_fondo.id}) -%>
         </td>
        </tr>
      </table>
    <% end -%>
  </td>
</tr>
