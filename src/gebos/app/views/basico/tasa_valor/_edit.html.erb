<tr id="row_<%= @tasa_valor.id %>_edit">
  <td class="lista-form" colspan="6">

    <%= form_title_edit @tasa_valor.fecha_resolucion_desde_f %>

    <%= error "row_#{@tasa_valor.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :tasa_id=>@tasa.id, :id => @tasa_valor.id } ) do -%>

          <%= render 'form' %>
          <%= link_to_remote(
            image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
            :loading =>'image_load()',
            :loaded => 'image_unload()',
            :url => { :action => :cancel_edit, :tasa_id=>@tasa.id, :id => @tasa_valor.id}) -%>
         </td>
        </tr>
      </table>
    <% end -%>
  </td>
</tr>
