
<%= form_title_edit @item.nombre %>

<%= render 'basico/sector/common/tabs' %>

<div class="marco-contenido2">

  <%= render 'basico/item/common/tabs' %>

  <div class="marco-contenido2">

    <%= error %>
    <%= message %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :item_id=>@item.id, :id => @item_atributo.id, :partida_id => @partida.id } ) do -%>
    <%= render 'form' %>

    <div id="buttons_edit" style="display: none">
      <%= form_buttons_edit :item_id=>@item.id, :id => @item_atributo.id, :partida_id => @partida.id, :popup=>params[:popup]%>
    </div>

    <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
      { :action => :index, :item_id=>@item.id, :id => @item_atributo.id, :partida_id => @partida.id },
      { :id=>'button_close' } ) -%>

    <% end -%>
  </div>
</div>
