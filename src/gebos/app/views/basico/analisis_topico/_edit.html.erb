<tr id="row_<%= @analisis_topico.id %>_edit">
	<td class="lista-form" colspan="4">
	
		<%= form_title_edit @analisis_topico.nombre %>
	
		<%= error "row_#{@analisis_topico.id}" %>
		
		<%= form_remote_tag(
		  :loading =>'image_load()',
			:loaded => 'image_unload()',
		  :url => { :action => :save_edit, :id => @analisis_topico.id } ) do-%>
	
					<%= render  'form' %>
					<%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
					  :loading =>'image_load()',
					  :loaded => 'image_unload()',
					  :method=> :get,
		              :url => { :action => :cancel_edit, :id => @analisis_topico.id}) -%>
			   </td>
			
		    </tr>
		  </table>
		<% end -%>
	</td>
</tr>
