<div class="marco-contenido">
  <%= form_title_edit @entidad_financiera.nombre %>

  <%= error %>
  <%= message %>

  <%= form_remote_tag(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :url => { :action => :save_edit, :id => @entidad_financiera.id } ) do-%>

  <%= render 'form' %>

  <div id="buttons_edit" style="display: none">
    <%= form_buttons_edit %>
  </div>

  <%= link_to( image_tag(image_path(t('Sistema.Body.Imagenes.cerrar'))),
    { :action => :index },
    { :id=>'button_close' } ) -%>


  <% end -%>
</div>
