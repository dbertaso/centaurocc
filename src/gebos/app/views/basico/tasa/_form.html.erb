<table>

    <tr>
      <td style="width: 60px">
        <label>
          <%= I18n.t('Sistema.Body.Vistas.General.sector') %>
        </label>
        <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
      </td>

      <td style="width: 620px">
        <%= select(
          'tasa', 'sector_id',
          @sector_list.map{|i| [i.nombre, i.id]},
          {:prompt=>I18n.t('Sistema.Body.Vistas.Form.seleccionar')},
          { :class=>'select',:onchange=>"#{remote_function(:loading =>'image_load()',
            :loaded => 'image_unload()',
            :method => :get, :url=>{:action=>:sector_tasa_change }, :with => "'sector_id='+value")}; inputChange();" } ) %>
      </td>
    </tr>

    <tr>
      <td>
        <label>
          <%= I18n.t('Sistema.Body.Vistas.General.sub_sector')%>
        </label>
        <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
      </td>

      <td>
        <div id="sub-sector-select">
          <%= select('tasa','sub_sector_id',
          @sub_sector_list.map{|i| [i.nombre, i.id]},
          {:prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
          {:class=>'select',:onchange=>"#{remote_function(:loading =>'image_load()',
            :loaded => 'image_unload()',
            :method => :get, :url=>{:action=>:sub_sector_tasa_change }, :with => "'sub_sector_id='+value")}; inputChange();" } ) %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <label>
          <%= I18n.t('Sistema.Body.Vistas.General.rubro')%>
          <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
        </label>
      </td>
      <td>

        <div id="rubro-select">
          <%= select('tasa','rubro_id',
          @rubro_list.map{|i| [i.nombre, i.id]},
          {:prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
          {:class=>'select',:onchange=>"#{remote_function(:loading =>'image_load()',
            :loaded => 'image_unload()',
            :method => :get, :url=>{:action=>:rubro_tasa_change }, :with => "'rubro_id='+value")}; inputChange();" } ) %>

        </div>
      </td>
    </tr>

    <tr>
      <td>
        <label>
          <%= I18n.t('Sistema.Body.Vistas.General.sub_rubro')%>
          <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
        </label>
      </td>
      <td>
        <div id="sub_rubro-select">
          <%= select('tasa','sub_rubro_id',
          @sub_rubro_list.map{|i| [i.nombre, i.id]},
          {:prompt => I18n.t('Sistema.Body.Vistas.Form.seleccionar') },
          {:class=>'select',:onchange=>'inputChange();' } ) %>

        </div>
      </td>
    </tr>

    <tr>
      <td style="width: 100px">
        <label><%= I18n.t('Sistema.Body.Vistas.General.nombre')%></label>
        <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
      </td>
      <td style="width: 600px">
        <%= text_field 'tasa', 'nombre',
          :class=>'text', :style=>'width: 300px',
          :maxlength=>'50', :onkeypress=>'inputChange();'  -%>
      </td>
    </tr>

    <tr>
      <td>
        <label><%= I18n.t('Sistema.Body.Vistas.Form.descripcion')%></label>
        <label title="<%=I18n.t('Sistema.Body.Vistas.General.obligatorio')%>"  class="requerido"> (*)
      </td>
      <td>
        <%= text_area 'tasa', 'descripcion',
          :class=>'text',
          :style=>'width: 540px; height: 60px',
          :onKeyUp=>'textCounter(this,300)',
          :onkeypress=>'inputChange();' -%>
      </td>
    </tr>

</table>
