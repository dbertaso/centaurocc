<%= form_title_search %>

<%= form_remote_tag(
  :loading =>'image_load()',
  :loaded => 'image_unload()',
  :method=>:get,
  :url => { :action => :list } ) do-%>

  <table>

    <tr>
      <td style="width: 150px">
        <label><%= I18n.t('Sistema.Body.Vistas.General.sector')%></label>
      </td>
      <td>
        <%= select(
          'sector_id', '',
          @sector_list.map{|i| [i.nombre, i.id]},
          {:prompt=>I18n.t('Sistema.Body.Vistas.Form.seleccionar')},
          { :class=>'select',:onchange=>"#{remote_function(:loading =>'image_load()',
            :loaded => 'image_unload()',
            :method => :get, :url=>{:action=>:sector_tasa_change_list }, :with => "'sector_id='+value")}; inputChange();" } ) %>
      </td>
    </tr>

    <tr>
      <td>
        <label><%= I18n.t('Sistema.Body.Vistas.General.sub_sector') %></label>
      </td>
      <td>
        <div id="sub-sector-select">
          <%= select_tag("sub_sector_id", ["<option value=''>I18n.t('Sistema.Body.Vistas.Form.seleccionar')</option>"], {:class=>'select'} ) %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <label><%= I18n.t('Sistema.Body.Vistas.General.rubro')%></label>
      </td>
      <td>
        <div id="rubro-select">
          <%= select_tag("rubro_id", ["<option value=''>#{I18n.t('Sistema.Body.Vistas.Form.seleccionar')} </option>"], {:class=>'select'} ) %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <label><%= I18n.t('Sistema.Body.Vistas.General.sub_rubro')%></label>
      </td>
      <td>
        <div id="sub_rubro-select">
          <%= select_tag("sub_rubro_id", ["<option value=''>#{I18n.t('Sistema.Body.Vistas.Form.seleccionar')} </option>"], {:class=>'select'} ) %>
        </div>
      </td>
    </tr>



    <tr>
      <td style="width: 60px">
        <label><%= I18n.t('Sistema.Body.Vistas.General.nombre')%></label>
      </td>
      <td>
        <%= text_field_tag 'nombre', '', :class=>'text', :maxlength=>'50', :style=>'width: 300px'  %>
      </td>
      <td>
        <%= image_submit_tag(image_path(I18n.t('Sistema.Body.Imagenes.buscar'))) -%>
      </td>
    </tr>
  </table>
<% end %>

<%= error %>
<%= message %>

<div id="list">
</div>
