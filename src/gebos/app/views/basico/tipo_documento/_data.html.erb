<% tipo_documento= @tipo_documento if tipo_documento.nil? %>

<td>
  <%= tipo_documento.tipo  %>
</td>	
<td>
  <%= tipo_documento.descripcion  %>
</td>	
<td style="text-align: center">
  <%= format_bool(tipo_documento.activo)  %>
</td>
<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method =>:get,
    :url => {:controller => 'tipo_documento', :action => :edit, :id => tipo_documento.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'tipo_documento', :action => :delete, :id => tipo_documento.id}) if vlink 'delete' -%>
</td>

