<table class="lista" style="width: 99%">
  <thead>
    <tr>
      <th style="width: 70%; text-align: center" <%= sort_class_helper('nombre') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'nombre', 'list' %>
      </th>
      <th style="width: 30%" style="text-align: center">
        <%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
      </th>
    </tr>

  </thead>
  <tbody id="list_body">
    <%  
    even_odd = 1
    for tipo_iniciativa in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :tipo_iniciativa => tipo_iniciativa, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>


