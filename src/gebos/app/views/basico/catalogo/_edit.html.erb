<tr id="row_<%= @catalogo.id %>_edit">
  <td class="lista-form" colspan="10">
    <%= form_title_edit "#{I18n.t('Sistema.Body.Vistas.General.numero')} #{I18n.t('Sistema.Body.Vistas.Form.convenio')}: " << @catalogo.contrato_maquinaria_equipo.numero_contrato %>

    <%= error "row_#{@catalogo.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',:loaded => 'image_unload()',
      :url => { :action => :save_edit, :id => @catalogo.id } ) do -%>
    <%= render :partial => 'form' %>
    <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),:loading =>'image_load()',:loaded => 'image_unload()', :method => :get,
      :url => { :action => :cancel_edit, :id => @catalogo.id}) -%>
  <% end -%>
  </td>
</tr>