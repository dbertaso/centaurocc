<table class="lista" style="width: 100%">
  <thead>
  <tr>
    <th style="width: 260px" <%= sort_class_helper('modalidad_financiamiento.nombre') %>>
      <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'modalidad_financiamiento.nombre', 'list' %>
      </th>
    <th style="width: 285px" <%= sort_class_helper('modalidad_financiamiento.descripcion') %>>
      <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.descripcion'), 'modalidad_financiamiento.descripcion', 'list' %>
      </th>
    <th style="width: 44px">
      <%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
    </th>
  </tr>
  </thead>
  <tbody id="list_body">
    <%
      even_odd = 1
      for modalidad_financiamiento in @list

        even_odd = 1 - even_odd %>
        <%= render :partial => 'row', :locals => { :modalidad_financiamiento => modalidad_financiamiento, :even_odd => even_odd } -%>

      <% end %>
  </tbody>
</table>

<%= form_pagination %>
