<table class="lista" style="width: 100%">
  <thead>
    <tr>
      
      <th style="width: 300px" <%= sort_class_helper('modelo') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.modelo'), 'modelo', 'list' %>
      </th>
      <th align="center" style="width: 100px" <%= sort_class_helper('es_propio') %>>
        <%= sort_link_helper "#{I18n.t('Sistema.Body.General.es').capitalize} #{I18n.t('Sistema.Body.Vistas.General.propia')}", 'es_propio', 'list' %>
      </th>
      <th style="width: 200px" <%= sort_class_helper('sereal') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.serial'), 'sereal', 'list' %>
      </th>
      <th style="width: 180px" <%= sort_class_helper('cantidad') %>>
        <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.cantidad'), 'cantidad', 'list' %>
      </th>

      <th><%= I18n.t('Sistema.Body.Vistas.General.acciones')%></th>
    </tr>
  </thead>
  <tbody id="list_body">
    <%
    even_odd = 1
    for equipo_seguridad in @list
      even_odd = 1 - even_odd %>
      <%= render :partial => 'row', :locals => { :equipo_seguridad => equipo_seguridad, :even_odd => even_odd } -%>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>

