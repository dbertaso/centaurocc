    <%= form_title_edit @equipo_seguridad.modelo %>

    <%= error "row_#{@equipo_seguridad.id}" %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id_equipo => @equipo_seguridad.id } ) do -%>
