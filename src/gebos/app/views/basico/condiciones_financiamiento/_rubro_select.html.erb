
      <% rubro_onchange = remote_function(
          :loading =>'image_load()',
          :loaded => 'image_unload()',
          :method => :get,
          :url=>{:controller=>'condiciones_financiamiento',
          :action=>:rubro_change },
          :with=>"'id='+value") %>


      <%= select(
      'condiciones_financiamiento', 'rubro_id',
      @rubro_select.map{|i| [i.nombre, i.id]},
      {:prompt=>I18n.t('Sistema.Body.Vistas.CondicionesFinanciamiento.Etiquetas.seleccione_rubro')},
      { :class=>'select', :onchange=>rubro_onchange + ';inputChange();' } ) %>


