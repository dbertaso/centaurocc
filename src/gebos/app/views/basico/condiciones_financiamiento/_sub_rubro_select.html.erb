<% sub_rubro_onchange = remote_function(
  :loading =>'image_load()',
  :loaded => 'image_unload()',
  :method => :get,
  :url=>{:controller=>'condiciones_financiamiento',:action=>:sub_rubro_change },
  :with=>"'id='+value") %>


<%= select(
'condiciones_financiamiento', 'sub_rubro_id',
@sub_rubro_select.map{|i| [i.nombre, i.id]},
{:prompt=>I18n.t('Sistema.Body.Vistas.CondicionesFinanciamiento.Etiquetas.seleccione_sub_rubro')},
{ :class=>'select', :onchange=>sub_rubro_onchange + ';inputChange();' } ) %>

