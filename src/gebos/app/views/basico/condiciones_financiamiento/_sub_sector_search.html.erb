<% sub_sector_onchange = remote_function(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method => :get,
    :url=>{:controller=>'condiciones_financiamiento',
    :action=>:sub_sector_search },
    :with=>"'id='+value") %>

<%= select_tag( :sub_sector_id,
                options_from_collection_for_select(@sub_sector_select, "id" ,"nombre" ),
                { :class=>'select',
                  :prompt=> I18n.t('Sistema.Body.Vistas.CondicionesFinanciamiento.Etiquetas.seleccione_sub_sector'),
                  :onchange=>sub_sector_onchange + ';inputChange();' })%>
