<% rubro_onchange = remote_function(
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method=>:get,
    :url=>{:controller=>'condiciones_financiamiento',
    :action=>:rubro_search },
    :with=>"'id='+value") %>

<%= select_tag( :rubro_id,
                options_from_collection_for_select(@rubro_select, "id" ,"nombre" ),
                { :class=>'select',
                  :prompt=> I18n.t('Sistema.Body.Vistas.CondicionesFinanciamiento.Etiquetas.seleccione_rubro'),
                  :onchange=>rubro_onchange + ';inputChange();' })%>
