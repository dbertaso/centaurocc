<% estatus = @estatus if estatus.nil? %>
<td>
	<%= estatus.nombre  %>
</td>
<td>
	<%= estatus.descripcion  %>
</td>	
<td>
	<%= estatus.area  %>
</td>	
<td>
	<%= estatus.const_id  %>
</td>	
<td style="text-align: center">
	<%= format_bool(estatus.activo)  %>
</td>	
<td style="text-align: right">
	
	
	<%= link_to_remote(
		image_tag(I18n.t('Sistema.Body.Imagenes.modificar')),
	  :loading =>'image_load()',
 	  :loaded => 'image_unload()',
    :method =>:get,
		:url => {:controller => 'estatus', :action => :edit, :id => estatus.id} ) if vlink 'edit' -%>
	<%= link_to_remote(
		image_tag(I18n.t('Sistema.Body.Imagenes.eliminar')),
	  :loading =>'image_load()',
 	  :loaded => 'image_unload()',
	:confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
		:url => {:controller => 'estatus', :action => :delete, :id => estatus.id}) if vlink 'delete' -%>
		
</td>
