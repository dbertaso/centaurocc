    <%= render 'form' %>

    <div id="buttons_edit" style="display: none">
      <%= form_buttons_edit  :sub_sector_id =>@sub_sector.id, :popup=>params[:popup] %>
    </div>

    <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
      { :controller=> 'rubro', :action => :index, :sub_sector_id =>@sub_sector.id, },
      { :id=>'button_close' } ) -%>

    <%end-%>
  </div>
</div>

