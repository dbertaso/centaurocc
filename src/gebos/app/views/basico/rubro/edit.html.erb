<div class="marco-contenido2">
  <%= render :partial=>'basico/rubro/common/tabs' %>
  <div class="marco-contenido2">
    <%= error  %>
    <%= message  %>
<% @rubro.activo.to_s %>
    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
