<% tipo_infraestructura= @tipo_infraestructura if tipo_infraestructura.nil? %>

<td>
  <%= tipo_infraestructura.nombre  %>
</td>	
<td>
  <%= tipo_infraestructura.descripcion  %>
</td>	
<td style="text-align: center">
  <%= format_bool(tipo_infraestructura.activo)  %>
</td>
<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')),
    :method => :get,
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :url => {:controller => 'tipo_infraestructura', :action => :edit, :id => tipo_infraestructura.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'tipo_infraestructura', :action => :delete, :id => tipo_infraestructura.id}) if vlink 'delete' -%>
</td>

