<% item = @motivo_visita if item.nil? %>
<td style="text-align: center">
  <%= item.nombre %>
</td>
<td style="text-align: center">
  <%= item.descripcion %>
</td>
<td style="text-align: center">
  <%= format_bool(item.activo) %>
</td>


<td style="text-align: center">
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :method => :get,
    :url => {:controller => 'motivo_visita', :action => :edit, :id => item.id}) if vlink 'edit' -%>&nbsp;
  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'motivo_visita', :action => :delete, :id => item.id}) if vlink 'delete' -%>
</td>
