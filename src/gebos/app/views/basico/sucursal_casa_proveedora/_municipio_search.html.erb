<% municipio_onchange = remote_function(
     :loading =>'image_load()',
	 :loaded => 'image_unload()',
    :method=> :get,
    :url=>{:controller=>'sucursal_casa_proveedora',
    :action=>:municipio_search },
    :with=>"'id='+value") %>


<%=select(
    'sucursal_casa_proveedora', 'municipio_id',
    @municipio_list.map {|i| [i.nombre,i.id]},
    {:prompt => I18n.t('Sistema.Body.Vistas.General.seleccionar')},
    { :class=>'select', :onchange=>municipio_onchange+';inputChange();' } ) %>
