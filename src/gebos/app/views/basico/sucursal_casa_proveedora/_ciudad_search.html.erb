<% ciudad_onchange = remote_function(
      :loading =>'image_load()',
	  :loaded => 'image_unload()',
      :method=> :get,
      :url=>{:controller=>'sucursal_casa_proveedora',
      :action=>:ciudad_search },
      :with=>"'id='+value")
    %>


<%=select(
    'sucursal_casa_proveedora', 'ciudad_id',
    @ciudad_list.map {|i| ["#{I18n.t('Sistema.Body.Vistas.General.estado')}: " << i.estado.nombre  << " - #{I18n.t('Sistema.Body.Vistas.General.ciudad')}: " << i.nombre,i.id]},
    {:prompt => I18n.t('Sistema.Body.Vistas.General.seleccionar')},
    { :class=>'select', :onchange=>ciudad_onchange+';inputChange();' } ) %>

