<%sector_tecnico = @sector_tecnico if sector_tecnico.nil? %>
<td>
  <%= sector_tecnico.sector.nombre  %>
</td>

<td style="text-align: right">
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>I18n.t('Sistema.Body.Vistas.General.modificar')), :method => :get, 
    :url => {:action => 'edit', :tecnico_campo_id => @tecnico_campo.id, :id => sector_tecnico.id, 
      :popup=>params[:popup]}) %>&nbsp;
  <%= link_to_remote(image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>I18n.t('Sistema.Body.Controladores.Accion.eliminar')),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm =>I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:action => :delete, :tecnico_campo_id => @tecnico_campo.id, :id => sector_tecnico.id}) -%>
</td>
