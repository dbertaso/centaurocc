<tr id="row_<%= @riesgo_sudeban.id %>_edit">
	<td class="lista-form" colspan="4">
	
		<%= form_title_edit @riesgo_sudeban.categoria %>
	
		<%= error "row_#{@riesgo_sudeban.id}" %>
		
		<%= form_remote_tag(
		  :loading =>'image_load()',
			:loaded => 'image_unload()',
		  :url => { :action => :save_edit, :id => @riesgo_sudeban.id } ) do -%>
	
					<%= render 'form' %>
					<%= link_to_remote(
		        image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
					  :loading =>'image_load()',
						:loaded => 'image_unload()',
						:method => :get,
		        :url => { :action => :cancel_edit, :id => @riesgo_sudeban.id}) -%>
			   </td>
			<td></td>
			<td></td>
			<td></td>
		    </tr>
		  </table>
		<% end %>
	</td>
</tr>
