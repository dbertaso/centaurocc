<table class="lista" style="width: 100%">
  <thead>
  <tr>
    <th style="width: 260px" <%= sort_class_helper('origen_fondo.nombre') %>>
      <%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'origen_fondo.nombre', 'origen_fondo_list' %>
      </th>
    <th style="width: 285px" <%= sort_class_helper('origen_fondo.descripcion') %>>
      <%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.descripcion'), 'origen_fondo.descripcion', 'origen_fondo_list' %>
      </th>
  </tr>
  </thead>
  <tbody id="list_body">
    <%
      even_odd = 1
      for origen_fondo in @list
        even_odd = 1 - even_odd %>

      <% origen_fondo = @origen_fondo if origen_fondo.nil? %>
      <tr class="lista<%= even_odd %>" id="row_<%= origen_fondo.id %>">
      <td>
        <%= origen_fondo.origen_fondo.nombre  %>
      </td>
      <td>
        <%= origen_fondo.origen_fondo.descripcion %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_pagination %>
