<tr id="row_<%= @instrumento_financiero.id %>_edit">
	<td class="lista-form" colspan="4">
	
		<%= form_title_edit @instrumento_financiero.descripcion %>
	
		<%= error "row_#{@instrumento_financiero.id}" %>
	
		<%= form_remote_tag(
		  :loading =>'image_load()',
			:loaded => 'image_unload()',
		  :url => { :action => :save_edit, :id => @instrumento_financiero.id } ) do -%>
					<%= render 'form' %>
					<%= link_to_remote(
		        image_tag(image_path(I18n.t('Sistema.Body.Imagenes.cancelar'))),
					  :loading =>'image_load()',
						:loaded => 'image_unload()',
		        :url => { :action => :cancel_edit, :id => @instrumento_financiero.id}) -%>
			   </td>
		    </tr>
		  </table>
		<% end %>
	</td>
</tr>