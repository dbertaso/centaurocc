    </td>
  </tr>

  <tr>
    <td><label><%=I18n.t('Sistema.Body.Modelos.ItemAtributo.Tipo.fecha')%></label></td>
    <td style="width: 620px">
      <%#= text_field 'comite', 'fecha_apertura_f',
        :class=>'text', :style=>'width: 80px',
        :maxlength=>'10', :onkeypress=>'inputChange();',
        :onchange=>'inputChange();' -%>
      <%#= calendar 'comite_fecha_apertura_f', 'calendar_fecha_apertura' %> <%=I18n.t('Sistema.Body.General.formato_fecha')%>
