        <option value="AM">AM</option>
        <option value="PM">PM</option>
      </select>
    </td>
  </tr>

  <tr>
    <td valign="top"><label><%=I18n.t('Sistema.Body.Vistas.General.lugar')%></label></td>
    <td>
      <%#= text_area 'comite', 'lugar',
        :class=>'text',
        :style=>'width: 350px; height: 40px',
        :onkeypress=>'inputChange();',
        :onKeyUp=>'textCounter(this,250)' -%>
    </td>
  </tr>

  <tr>
    <td valign="top"><label><%=I18n.t('Sistema.Body.General.direccion')%></label></td>
    <td>
      <%#= text_area 'comite', 'direccion',
      :class=>'text',
      :style=>'width: 350px; height: 60px',
      :onkeypress=>'inputChange();',
      :onKeyUp=>'textCounter(this,400)' -%>
    </td>
  </tr>

</table>


