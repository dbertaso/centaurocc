  </tr>

  <tr>
    <td><label><%=I18n.t('Sistema.Body.Vistas.General.hora')%></label></td>
    <td style="width: 620px">
      <%#= text_field 'comite', 'hora_apertura', :class=>'text', :style=>'width: 20px', :maxlength=>'2'  -%>:
      <%#= text_field 'comite', 'minuto_apertura', :class=>'text', :style=>'width: 20px', :maxlength=>'2'  -%>
