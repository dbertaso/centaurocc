  </tr>

  <tr>
    <td style="width: 60px"><label><%=I18n.t('Sistema.Body.Vistas.General.instancia') << " " << I18n.t('Sistema.Body.Vistas.General.de') << " " << I18n.t('Sistema.Body.Vistas.General.aprobacion')%></label></td>
    <td style="width: 620px">
      <%#= select('comite', 'instancia_tipo_id',
