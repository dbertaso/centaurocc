<table>
  <tr>
    <td style="width: 60px"><label># <%=I18n.t('Sistema.Body.Vistas.General.instancia')%></label></td>
    <td style="width: 620px">
      <div id='nro_comite'>
      <%= text_field 'comite', 'comite_nro', :class=>'text', :style=>'width: 22px', :maxlength=>'4', :value => ""  -%>-
      <%#=@anio_comite%>
