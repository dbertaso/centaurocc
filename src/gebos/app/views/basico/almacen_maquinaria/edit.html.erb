<div class="marco-contenido">
  <%= form_title_edit @almacen_maquinaria.nombre %>

  <%= render :partial=>'basico/almacen_maquinaria/common/tabs' %>
  <div class="marco-contenido2">

    <%= error %>
    <%= message %>

    <%= form_remote_tag(
      :loading =>'image_load()',
      :loaded => 'image_unload()',
      :url => { :action => :save_edit, :id=>@almacen_maquinaria.id } ) do -%>		

      <%= render :partial => 'form' %>
      <tr>
        <td colspan="2" style="text-align: left">
          <div id="buttons_edit" style="display: none">
            <%= form_buttons_edit %>
          </div>

          <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
            { :action => :index },
            { :id=>'button_close' } ) -%>

        </td>
      </tr>
      </table>

    <% end -%>
  </div>
</div>