<tr id="row_<%= @ficha_resumen.id %>_edit">
	<td class="lista-form" colspan="2">
	
		<%= form_title_edit @ficha_resumen.id %>
	
		<%= error "row_#{@ficha_resumen.id}" %>
		
		<%= form_remote_tag(
		  :loading =>'image_load()',
			:loaded => 'image_unload()',
		  :url => { :action => :save_edit, :id => @ficha_resumen.id } ) do -%>
	
					<%= render :partial => 'form' %>
					<%= link_to_remote(
		        image_tag(I18n.t('Sistema.Body.Imagenes.cancelar')),
					  :loading =>'image_load()',
						:loaded => 'image_unload()',
		        :url => { :action => :cancel_edit, :id => @ficha_resumen.id}) -%>
			   </td>
			<td></td>
			<td></td>
			<td></td>
		    </tr>
		  </table>
		<% end -%>
	</td>
</tr>
