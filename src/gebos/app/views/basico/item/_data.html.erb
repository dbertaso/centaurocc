<% item = @item if item.nil? %>
<td>
  <%= item.partida.actividad.sub_rubro.rubro.codigo  %>
</td> 
<td>
  <%= item.partida.actividad.sub_rubro.rubro.nombre  %>
</td> 
<td>
  <%= item.partida.codigo  %>
</td> 
<td>
  <%= item.partida.nombre  %>
</td> 
<td>
  <%= item.codigo  %>
</td> 
<td>
  <%= item.nombre  %>
</td> 
<td>
  <%= item.descripcion  %>
</td> 
<td style="text-align: center">
  <%= format_bool(item.activo)  %>
</td> 
<td style="text-align: right">
  <%= link_to(image_tag(I18n.t('Sistema.Body.Imagenes.modificar'), :title=>'Modificar'), :action => 'edit', :id => item.id, :partida_id => @partida.id) if vlink 'edit' %>&nbsp;

  <%= link_to_remote(
    image_tag(I18n.t('Sistema.Body.Imagenes.eliminar'), :title=>'Eliminar'),
    :loading =>'image_load()',
    :loaded => 'image_unload()',
    :confirm => I18n.t('Sistema.Body.Vistas.Helpers.Mensajes.esta_seguro'),
    :url => {:controller => 'item', :action => :delete, :id => item.id, :partida_id => @partida.id}) if vlink 'delete' -%>
</td>
