<table class="lista" style="width: 100%">
		<thead>
		<tr>
                        <th style="width: 100px" <%= sort_class_helper('casa_proveedora.rif') %>>
				<%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.rif'), 'casa_proveedora.rif', 'list' %>
 			</th>
                        <th style="width: 130px" <%= sort_class_helper('casa_proveedora.nombre') %>>
				<%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.nombre'), 'casa_proveedora.nombre', 'list' %>
 			</th>
                        <th style="width: 100px" <%= sort_class_helper('estado.nombre') %>>
				<%= sort_link_helper I18n.t('Sistema.Body.Vistas.General.estado'), 'estado.nombre', 'list' %>
 			</th>
			<th style="width: 290px" <%= sort_class_helper('casa_proveedora.descripcion') %>>
				<%= sort_link_helper I18n.t('Sistema.Body.Vistas.Form.descripcion'), 'casa_proveedora.descripcion', 'list' %>
 			</th>
			<th style="width: 70px">
               <%= I18n.t('Sistema.Body.Vistas.General.acciones')%>
 			</th>
		</tr>		
		</thead>
		<tbody id="list_body">
<%  
	@even_odd = 1
	for @casa_proveedora in @list		
		@even_odd = 1 - @even_odd %>
	<%= render 'row', :locals => { :casa_proveedora => @casa_proveedora, :even_odd => @even_odd } -%>
        
<% end %>
</tbody>
</table>
<%= form_pagination %>

