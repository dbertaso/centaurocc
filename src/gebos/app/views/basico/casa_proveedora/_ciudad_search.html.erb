<% municipio_onchange = remote_function(
          :loading =>'image_load()',
		  :loaded => 'image_unload()',
		  :method=> :get,
          :url=>{:controller=>'casa_proveedora',
          :action=>:municipio_search },
          :with=>"'id='+value")
      %>


<%=
  select("casa_proveedora", "ciudad_id",
    @ciudad.map {|u| [u.nombre,u.id]},
    {:prompt => I18n.t('Sistema.Body.Vistas.General.seleccionar')},
    { :class=>'select', :onchange=>municipio_onchange+';inputChange();'}) 
%> 
