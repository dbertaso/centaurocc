  <%#= link_to_remote(
		image_tag('boton_modificar.gif'),
   	    :loading =>'image_load()',
		:loaded => 'image_unload()',
		:method =>:get,
		:html_options => { :id=>'button_edit' },
		:url => {:controller => 'casa_proveedora', :action => :edit, :id => @casa_proveedora.id} ) if vlink 'edit' -%>  
  
  
  
  <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.boton_modificar')),
    :action => :edit,    
    :id => @casa_proveedora.id,
    :html_options => { :id=>'button_edit' } ) if vlink 'edit' -%>


  <%= link_to( image_tag(I18n.t('Sistema.Body.Imagenes.cerrar')),
    { :action => :index },
    { :id=>'button_close' } ) -%>

