    </tr>

    <tr>
      <td>
        <label><%=I18n.t('Sistema.Body.Vistas.General.nombre')%> </label>
        <label style="color:red"><%=I18n.t('Sistema.Body.Vistas.Form.asterisco')%></label>
      </td>
