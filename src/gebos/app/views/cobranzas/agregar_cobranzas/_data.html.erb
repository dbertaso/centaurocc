<td align="center">
  <%= prestamo.numero %>
</td>
<td align="center">
  <%= prestamo.estatus_w %>
</td>
<td align="center">
  <%= prestamo.solicitud.sector.nombre %>
</td>
<td align="center">
  <%= prestamo.solicitud.sub_sector.nombre %>
</td>
<td align="right">
  <%= prestamo.capital_vencido_fm %>
</td>
<td align="center">
  <%= prestamo.moneda.nombre + " - " + prestamo.moneda.abreviatura %>
</td>
<td align="center">
  <%= prestamo.cantidad_cuotas_vencidas %>
</td>
<td align="center">
  <%= prestamo.dias_mora %>
